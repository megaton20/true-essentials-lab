<style>
    :root {
        --primary: #3bf689;
        --secondary: #e0ec3a;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --info: #0ea5e9;
    }
    
    .detail-card {
        transition: all 0.2s ease;
        border-left: 2px solid #e5e7eb;
    }
    
    .detail-card:hover {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }
    
    .user-avatar {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-size: 0.75rem;
    }
    
    .takeaway-item {
        position: relative;
        padding-left: 1rem;
    }
    
    .takeaway-item:before {
        content: "→";
        position: absolute;
        left: 0;
        color: #3b82f6;
    }
    
    .status-badge {
        font-size: 0.7rem;
        padding: 0.15rem 0.5rem;
    }
    
    .status-open { background-color: #d1fae5; color: #065f46; }
    .status-closed { background-color: #f3f4f6; color: #6b7280; }
    
    /* Confirmation Modal Styles */
    .confirmation-modal {
        animation: modalFadeIn 0.2s ease-out;
    }
    
    @keyframes modalFadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

<body class="bg-gray-50">
    <!-- Navbar -->
    <%-include('./partials/topnav') %>

    <!-- Sidebar -->
    <%-include('./partials/sidenav') %>

    <!-- Main Content -->
    <div class="container mx-auto px-2 py-4 mt-4">
        <div class="flex flex-col lg:flex-row gap-4">
            <!-- Static Sidebar -->
            <div class="hidden lg:block lg:w-1/4">
                <%-include('./partials/staticsidebar') %>
            </div>

            <!-- Main Content Area -->
            <div class="lg:w-3/4">
                <!-- Header -->
                <div class="mb-6">
                    <div class="flex justify-between items-center">
                        <div>
                            <a href="/admin/courses" 
                               class="inline-flex items-center gap-2 px-3 py-1.5 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors mb-2">
                                <i class="fas fa-arrow-left text-xs"></i>
                                Back
                            </a>
                            <h1 class="text-xl font-semibold text-gray-900">Program Details</h1>
                            <p class="text-sm text-gray-500 mt-1">Manage program information and assignments</p>
                        </div>

                <div class="flex gap-2">
                    <!-- Open/Close Toggle -->
                    <button onclick="openConfirmationModal()" 
                            class="inline-flex items-center gap-2 px-3 py-2 <%= course.is_open ? 'bg-red-50 text-red-600 hover:bg-red-100' : 'bg-green-50 text-green-600 hover:bg-green-100' %> font-medium rounded-lg transition-colors text-sm">
                        <i class="fas <%= course.is_open ? 'fa-lock' : 'fa-unlock' %> text-xs"></i>
                        <%= course.is_open ? 'Close Program' : 'Open Program' %>
                    </button>
                    
                    <% if (course.teacher_id == user.id) { %>
                        <button onclick="openEditModal()" 
                                class="inline-flex items-center gap-2 px-3 py-2 bg-white border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors text-sm">
                            <i class="fas fa-edit text-xs"></i>
                            Edit
                        </button>
                    <% } else { %>
                        <button disabled 
                                class="inline-flex items-center gap-2 px-3 py-2 bg-gray-100 text-gray-400 font-medium rounded-lg cursor-not-allowed text-sm">
                            <i class="fas fa-edit text-xs"></i>
                            Edit
                        </button>
                    <% } %>
                </div>

                    </div>
                </div>

                <%- include('../partials/messages') %>

                <!-- Program Status Banner -->
                <div class="mb-4">
                    <div class="flex items-center justify-between p-3 <%= course.is_open ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %> rounded-lg">
                        <div class="flex items-center gap-3">
                            <div class="p-2 rounded-lg <%= course.is_open ? 'bg-green-100' : 'bg-gray-100' %>">
                                <i class="fas <%= course.is_open ? 'fa-unlock text-green-600' : 'fa-lock text-gray-600' %> text-sm"></i>
                            </div>
                            <div>
                                <h3 class="text-sm font-semibold <%= course.is_open ? 'text-green-800' : 'text-gray-800' %>">
                                    <%= course.is_open ? 'Program is Open' : 'Program is Closed' %>
                                </h3>
                                <p class="text-xs <%= course.is_open ? 'text-green-600' : 'text-gray-600' %>">
                                    <%= course.is_open ? 'Students can access this program' : 'Students cannot access this program' %>
                                </p>
                            </div>
                        </div>
                        <span class="inline-flex items-center status-badge <%= course.is_open ? 'status-open' : 'status-closed' %> rounded-full">
                            <span class="w-1.5 h-1.5 rounded-full mr-1.5 <%= course.is_open ? 'bg-green-500' : 'bg-gray-500' %>"></span>
                            <%= course.is_open ? 'Active' : 'Inactive' %>
                        </span>
                    </div>
                </div>

                <!-- Main Content Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
                    <!-- Left Column - Program Info -->
                    <div class="lg:col-span-2 space-y-4">
                        <!-- Program Card -->
                        <div class="detail-card bg-white rounded-lg border border-gray-200 p-4">
                            <div class="flex items-start justify-between mb-4">
                                <h2 class="text-lg font-semibold text-gray-900"><%= course.title %></h2>
                                <span class="text-sm text-gray-500">ID: <%= course.id %></span>
                            </div>
                            
                            <div class="space-y-3">
                                <div>
                                    <label class="text-xs font-medium text-gray-500">Description</label>
                                    <p class="text-sm text-gray-700 mt-1"><%= course.description || 'No description provided.' %></p>
                                </div>
                                
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="text-xs font-medium text-gray-500">Price</label>
                                        <p class="text-sm font-medium text-gray-900 mt-1">$<%= course.price || '0.00' %></p>
                                    </div>
                                    <div>
                                        <label class="text-xs font-medium text-gray-500">Created</label>
                                        <p class="text-sm text-gray-700 mt-1">
                                            <%= new Date(course.created_at).toLocaleDateString('en-US', { 
                                                month: 'short', 
                                                day: 'numeric', 
                                                year: 'numeric' 
                                            }) %>
                                        </p>
                                    </div>
                                </div>
                                
                                <!-- Level and Category -->
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="text-xs font-medium text-gray-500">Level</label>
                                        <span class="inline-flex items-center status-badge <%= 
                                            course.level === 'easy' ? 'bg-green-100 text-green-800' :
                                            course.level === 'medium' ? 'bg-blue-100 text-blue-800' :
                                            course.level === 'hard' ? 'bg-purple-100 text-purple-800' :
                                            'bg-gray-100 text-gray-800'
                                        %> rounded-full mt-1">
                                            <%= course.level ? course.level.charAt(0).toUpperCase() + course.level.slice(1) : 'Not set' %>
                                        </span>
                                    </div>
                                    <div>
                                        <label class="text-xs font-medium text-gray-500">Category</label>
                                        <p class="text-sm text-gray-700 mt-1">
                                            <%= course.category_name || 'Uncategorized' %>
                                        </p>
                                    </div>
                                </div>
                                
                                <!-- Takeaways -->
                                <div class="pt-3 border-t border-gray-100">
                                    <label class="text-xs font-medium text-gray-500 mb-2 block">Key Takeaways</label>
                                    <div class="space-y-2">
                                        <% if (course.takeaways && course.takeaways.length > 0) { %>
                                            <% course.takeaways.forEach(function(takeaway, index) { %>
                                                <div class="takeaway-item text-sm text-gray-700">
                                                    <%= takeaway %>
                                                </div>
                                            <% }); %>
                                        <% } else { %>
                                            <p class="text-sm text-gray-500 italic">No takeaways provided.</p>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Enrolled Students -->
                        <div class="detail-card bg-white rounded-lg border border-gray-200">
                            <div class="p-4 border-b border-gray-200">
                                <h3 class="text-sm font-semibold text-gray-900 flex items-center gap-2">
                                    <i class="fas fa-users text-blue-500 text-sm"></i>
                                    Enrolled Students (<%= course.enrolled_users ? course.enrolled_users.length : 0 %>)
                                </h3>
                            </div>
                            
                            <div class="p-4">
                                <% if (course.enrolled_users && course.enrolled_users.length > 0) { %>
                                    <div class="space-y-3">
                                        <% course.enrolled_users.forEach(es => { %>
                                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                                <div class="flex items-center gap-3">
                                                    <div class="user-avatar rounded-full flex items-center justify-center font-medium">
                                                        <%= es.user_name ? es.user_name.charAt(0).toUpperCase() : 'U' %>
                                                    </div>
                                                    <div>
                                                        <p class="text-sm font-medium text-gray-900"><%= es.user_name %></p>
                                                        <p class="text-xs text-gray-500"><%= es.user_email %></p>
                                                    </div>
                                                </div>
                                                <div class="text-right">
                                                    <p class="text-xs text-gray-500">
                                                        Enrolled: <%= new Date(es.enrolled_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) %>
                                                    </p>
                                                    <button class="text-xs text-blue-600 hover:text-blue-700 mt-1">
                                                        View Details
                                                    </button>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-8">
                                        <i class="fas fa-user-graduate text-gray-300 text-2xl mb-3"></i>
                                        <p class="text-sm text-gray-500">No students enrolled yet</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column - Stats & Teachers -->
                    <div class="space-y-4">
                        <!-- Stats Card -->
                        <div class="detail-card bg-white rounded-lg border border-gray-200 p-4">
                            <h3 class="text-sm font-semibold text-gray-900 mb-4">Program Stats</h3>
                            <div class="space-y-4">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-xs text-gray-500">Total Sessions</p>
                                        <p class="text-lg font-semibold text-gray-900"><%= course.total_sessions || 0 %></p>
                                    </div>
                                    <div class="p-2 rounded-lg bg-blue-100">
                                        <i class="fas fa-calendar-alt text-blue-500 text-sm"></i>
                                    </div>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-xs text-gray-500">Enrolled Students</p>
                                        <p class="text-lg font-semibold text-gray-900">
                                            <%= course.enrolled_users ? course.enrolled_users.length : 0 %>
                                        </p>
                                    </div>
                                    <div class="p-2 rounded-lg bg-green-100">
                                        <i class="fas fa-user-graduate text-green-500 text-sm"></i>
                                    </div>
                                </div>
                                
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-xs text-gray-500">Program Status</p>
                                        <p class="text-lg font-semibold text-gray-900 <%= course.is_open ? 'text-green-600' : 'text-gray-600' %>">
                                            <%= course.is_open ? 'Open' : 'Closed' %>
                                        </p>
                                    </div>
                                    <div class="p-2 rounded-lg <%= course.is_open ? 'bg-green-100' : 'bg-gray-100' %>">
                                        <i class="fas <%= course.is_open ? 'fa-check text-green-500' : 'fa-times text-gray-500' %> text-sm"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Assigned Teachers -->
                        <div class="detail-card bg-white rounded-lg border border-gray-200">
                            <div class="p-4 border-b border-gray-200">
                                <h3 class="text-sm font-semibold text-gray-900 flex items-center gap-2">
                                    <i class="fas fa-chalkboard-teacher text-purple-500 text-sm"></i>
                                    Assigned Teachers
                                </h3>
                            </div>
                            
                            <div class="p-4">
                                <% if (course.teachers && course.teachers.length > 0) { %>
                                    <div class="space-y-3">
                                        <% course.teachers.forEach(t => { %>
                                            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                                                <div class="user-avatar rounded-full flex items-center justify-center font-medium">
                                                    <%= t.full_name ? t.full_name.charAt(0).toUpperCase() : 'T' %>
                                                </div>
                                                <div class="flex-1 min-w-0">
                                                    <p class="text-sm font-medium text-gray-900 truncate"><%= t.full_name %></p>
                                                    <p class="text-xs text-gray-500 truncate"><%= t.email %></p>
                                                    <% if (t.specialization) { %>
                                                        <span class="inline-block mt-1 px-2 py-0.5 bg-purple-50 text-purple-700 text-xs rounded">
                                                            <%= t.specialization %>
                                                        </span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-8">
                                        <i class="fas fa-chalkboard-teacher text-gray-300 text-2xl mb-3"></i>
                                        <p class="text-sm text-gray-500">No teachers assigned</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Assign Teacher Form (only for owner) -->
                        <% if (course.teacher_id == user.id) { %>
                            <div class="detail-card bg-white rounded-lg border border-gray-200 p-4">
                                <h3 class="text-sm font-semibold text-gray-900 mb-3">Assign Teacher</h3>
                                <form action="/admin/teacher/assign" method="POST" class="space-y-3">
                                    <input type="hidden" name="course_id" value="<%= course.id %>">
                                    
                                    <div>
                                        <label class="text-xs font-medium text-gray-700 mb-1 block">Select Teacher</label>
                                        <select name="teacher_id" 
                                                class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                                required>
                                            <option value="" disabled selected>Choose a teacher</option>
                                            <% allTeachers.forEach(teacher => { %>
                                                <option value="<%= teacher.id %>">
                                                    <%= teacher.full_name %> • <%= teacher.email %>
                                                </option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    
                                    <button type="submit" 
                                            class="w-full inline-flex items-center justify-center gap-2 px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 transition-colors">
                                        <i class="fas fa-user-plus text-xs"></i>
                                        Assign Teacher
                                    </button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50 overflow-y-auto">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg shadow-lg max-w-lg w-full">
                <div class="p-5">
                    <div class="flex justify-between items-center mb-5">
                        <h3 class="text-lg font-semibold text-gray-900">Edit Program</h3>
                        <button onclick="closeEditModal()" class="text-gray-400 hover:text-gray-500">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    
                    <form method="post" action="/admin/courses/<%= course.id %>">
                        <input type="hidden" name="_method" value="PUT">
                        
                        <div class="space-y-4">
                            <!-- Title -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Program Title</label>
                                <input type="text" 
                                       name="title" 
                                       value="<%= course.title %>"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                       required />
                            </div>

                            <!-- Price & Level -->
                            <div class="grid grid-cols-2 gap-3">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Price ($)</label>
                                    <input type="number" 
                                           name="price" 
                                           value="<%= course.price %>"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                           step="0.01"
                                           required />
                                </div>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Level</label>
                                    <select name="level" 
                                            class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                            required>
                                        <option value="easy" <%= course.level === 'easy' ? 'selected' : '' %>>Easy</option>
                                        <option value="medium" <%= course.level === 'medium' ? 'selected' : '' %>>Medium</option>
                                        <option value="hard" <%= course.level === 'hard' ? 'selected' : '' %>>Hard</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Category -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Category</label>
                                <select name="category_id" 
                                        class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                        required>
                                    <% if (categories && categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <option value="<%= cat.id %>" 
                                                    <%= cat.id === course.category_id ? 'selected' : '' %>>
                                                <%= cat.name %>
                                            </option>
                                        <% }) %>
                                    <% } else { %>
                                        <option value="">No categories available</option>
                                    <% } %>
                                </select>
                            </div>

                            <!-- Description -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                                <textarea name="description" 
                                          rows="3"
                                          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                          required><%= course.description %></textarea>
                            </div>

                            <!-- Takeaways -->
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Key Takeaways</label>
                                <div id="takeaways-container" class="space-y-2">
                                    <% if (course.takeaways && course.takeaways.length > 0) { %>
                                        <% course.takeaways.forEach(function(takeaway, index) { %>
                                            <input type="text" 
                                                   name="takeaways" 
                                                   value="<%= takeaway %>"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                                   placeholder="Enter takeaway <%= index + 1 %>"
                                                   required />
                                        <% }); %>
                                    <% } else { %>
                                        <input type="text" 
                                               name="takeaways" 
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                               placeholder="Enter takeaway 1"
                                               required />
                                        <input type="text" 
                                               name="takeaways" 
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                               placeholder="Enter takeaway 2"
                                               required />
                                        <input type="text" 
                                               name="takeaways" 
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500"
                                               placeholder="Enter takeaway 3"
                                               required />
                                    <% } %>
                                </div>
                                <button type="button" 
                                        onclick="addTakeawayField()"
                                        class="mt-2 inline-flex items-center gap-1 px-3 py-1.5 border border-gray-300 text-gray-700 text-xs font-medium rounded-lg hover:bg-gray-50 transition-colors">
                                    <i class="fas fa-plus text-xs"></i>
                                    Add Another
                                </button>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="flex justify-end gap-2 mt-6 pt-5 border-t border-gray-200">
                            <button type="button" 
                                    onclick="closeEditModal()"
                                    class="px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50">
                                Cancel
                            </button>
                            <button type="submit" 
                                    class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg hover:bg-blue-600 flex items-center gap-1">
                                <i class="fas fa-save text-xs"></i>
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

            <!-- Confirmation Modal -->
            <div id="confirmationModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50 overflow-y-auto">
                <div class="flex items-center justify-center min-h-screen p-4">
                    <div class="bg-white rounded-lg shadow-lg max-w-sm w-full confirmation-modal">
                        <div class="p-5">
                            <!-- Modal Icon -->
                            <div class="flex items-center justify-center w-12 h-12 rounded-full <%= course.is_open ? 'bg-red-100' : 'bg-green-100' %> mx-auto mb-4">
                                <i class="fas <%= course.is_open ? 'fa-lock text-red-500' : 'fa-unlock text-green-500' %>"></i>
                            </div>
                            
                            <!-- Modal Title -->
                            <h3 class="text-lg font-semibold text-gray-900 text-center mb-3">
                                <%= course.is_open ? 'Close Program?' : 'Open Program?' %>
                            </h3>
                            
                            <!-- Modal Message -->
                            <div class="mb-6">
                                <p class="text-sm text-gray-600 text-center">
                                    <%= course.is_open 
                                        ? 'Students won\'t be able to access this program. Are you sure you want to close it?' 
                                        : 'Students will be able to access this program. Are you sure you want to open it?' %>
                                </p>
                                <div class="mt-3 p-3 bg-gray-50 rounded-lg">
                                    <div class="text-xs text-gray-500">Program:</div>
                                    <div class="text-sm font-medium text-gray-900"><%= course.title %></div>
                                    <div class="text-xs text-gray-500 mt-1">
                                        Currently: <span class="font-medium <%= course.is_open ? 'text-green-600' : 'text-gray-600' %>">
                                            <%= course.is_open ? 'Open' : 'Closed' %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Action Form -->
                            <form id="statusToggleForm" method="post" action="/admin/course/<%= course.id %>">
                                <input type="hidden" name="_method" value="PUT">
                                <!-- Send current boolean state -->
                                <input type="hidden" name="currentStatus" value="<%= course.is_open %>">
                                
                                <div class="flex justify-end gap-2">
                                    <button type="button" 
                                            onclick="closeConfirmationModal()"
                                            class="px-4 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-colors">
                                        Cancel
                                    </button>
                                    <button type="submit" 
                                            class="px-4 py-2 <%= course.is_open ? 'bg-red-500 hover:bg-red-600' : 'bg-green-500 hover:bg-green-600' %> text-white text-sm font-medium rounded-lg transition-colors flex items-center gap-1">
                                        <i class="fas <%= course.is_open ? 'fa-lock' : 'fa-unlock' %> text-xs"></i>
                                        <%= course.is_open ? 'Close Program' : 'Open Program' %>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

    <script>
        // Modal functions
        function openEditModal() {
            document.getElementById('editModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function openConfirmationModal() {
            document.getElementById('confirmationModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeConfirmationModal() {
            document.getElementById('confirmationModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Add takeaway field dynamically
        function addTakeawayField() {
            const container = document.getElementById('takeaways-container');
            const currentCount = container.querySelectorAll('input[name="takeaways"]').length;
            const newInput = document.createElement('input');
            newInput.type = 'text';
            newInput.name = 'takeaways';
            newInput.className = 'w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-1 focus:ring-blue-500 focus:border-blue-500';
            newInput.placeholder = `Enter takeaway ${currentCount + 1}`;
            newInput.required = true;
            container.appendChild(newInput);
        }

        // Close modals on outside click
        document.getElementById('editModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeEditModal();
            }
        });

        document.getElementById('confirmationModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeConfirmationModal();
            }
        });

        // Escape key to close modals
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeEditModal();
                closeConfirmationModal();
            }
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Course details page loaded');
            
            // Optional: Auto-focus on cancel button in confirmation modal for better UX
            const confirmationModal = document.getElementById('confirmationModal');
            if (confirmationModal) {
                confirmationModal.addEventListener('show', function() {
                    setTimeout(() => {
                        const cancelBtn = confirmationModal.querySelector('button[onclick="closeConfirmationModal()"]');
                        if (cancelBtn) cancelBtn.focus();
                    }, 100);
                });
            }
        });
    </script>
</body>