
  <!-- Navbar -->
   <%-include('./partials/topnav') %>

  <!-- Sidebar -->
  <%-include('./partials/sidenav') %>

  <!-- Main Content -->
  <div class="container-fluid mt-4">
    <div class="row">
      <!-- Static Sidebar -->
      <div class="col-lg-3 d-none d-lg-block">
          <%-include('./partials/staticsidebar') %>
      </div>

      <!-- Class Details Section -->
      <div class="col-lg-9">
        <main class="p-1">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/admin/courses" class="btn btn-outline-primary btn-sm">Back</a>

               <% if (course.teacher_id == user.id) { %>

                <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#editClassModal">Edit</button>
                   
                      <% } else { %>
                        <button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" disabled>Edit</button>
                  <% } %>

          </div>

          <%- include('../partials/messages') %>

          <div class="row">
            <!-- program Info Card -->
            <div class="col-md-8">
              <div class="mt-2 p-3 border rounded shadow-sm bg-light">
                <h4 class="mb-2"><%= course.title %></h4>
                <p><strong>Description:</strong> <%= course.description || 'No description provided.' %></p>
                <p><strong>Price:</strong> <%= course.price || '0.00' %></p>
                <p><strong>Created:</strong><br> <%= new Date(course.created_at).toLocaleString() %></p>
             
                <hr>
                
              <h4>Takeaways:</h4>
                <ul>
                  <% if (course.takeaways && course.takeaways.length > 0) { %>
                    <% course.takeaways.forEach(function(takeaway, index) { %>
                      <li><%= takeaway %></li>
                    <% }); %>
                  <% } else { %>
                    <li>No takeaways provided.</li>
                  <% } %>
                </ul>
            </div>
            </div>
            <!-- Teachers & Sessions -->
            <div class="col-md-4">
              <div class="mt-2 p-1 mb-3 border rounded shadow-sm bg-light">
                <p><strong>Total Sessions:</strong><br> <%= course.total_sessions || 0 %></p>

                <hr>
                <p><strong>Assigned Teachers:</strong></p>
                <% if (course.teachers && course.teachers.length > 0) { %>
                  <ul class="list-group">
                    <% course.teachers.forEach(t => { %>
                      <li class="list-group-item">
                        <strong><%= t.full_name %></strong><br>
                        <small class="text-muted"><%= t.email %></small>
                        <% if (t.specialization) { %><br><small>Specialization: <%= t.specialization %></small><% } %>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <p class="text-muted">No teachers assigned to this program yet.</p>
                <% } %>
              </div>
            </div>
            <% if (course.teacher_id == user.id) { %>
              <div>
              <form action="/admin/teacher/assign" method="POST" class="mb-4">
                <input type="hidden" name="course_id" value="<%= course.id %>">
                <div class="mb-3">
                  <label for="teacherSelect" class="form-label">Select Teacher</label>
                  <select class="form-select" id="teacherSelect" name="teacher_id" required>
                    <option disabled selected value="">-- Choose a teacher --</option>
                    <% allAeachers.forEach(teacher => { %>
                      <option value="<%= teacher.id %>">
                        <%= teacher.full_name %> (<%= teacher.email %>)
                      </option>
                    <% }); %>
                  </select>
                </div>

                <button type="submit" class="btn btn-primary">
                  Assign Teacher
                </button>
              </form>

            </div>
                 <% } else { %>

                  <% } %>
            
          </div>
        </main>

      </div>
    </div>
  </div>

  <!-- Edit Modal -->
  <div class="modal fade" id="editClassModal" tabindex="-1" aria-labelledby="editClassModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" method="post" action="/admin/courses/<%= course.id %>">
        <input type="hidden" name="_method" value="PUT">
        <div class="modal-header">
          <h5 class="modal-title">Edit Program Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
            <div class="mb-3">
              <label for="classTitle" class="form-label">Program Title</label>
              <input type="text" class="form-control" id="classTitle" name="title" value="<%= course.title %>" required>
            </div>

             <div class="mb-3">
              <label for="classTitle" class="form-label">Program Price</label>
              <input type="number" class="form-control" id="price" name="price" value="<%= course.price %>" required>
            </div>

                 <div class="mb-3">
                    <label class="form-label">Level</label>
                        <select name="level" class="form-select" id="edit-category" required>
                                <option value="easy">easy</option>
                                <option value="medium">medium</option>
                                <option value="hard">Hard</option>
                          </select>
                </div>


            <div class="mb-3">
              <label for="classDesc" class="form-label">Description</label>
              <textarea class="form-control" id="classDesc" name="description" rows="3" required><%= course.description %></textarea>
            </div>

               <!-- Category -->
        <div class="mb-3">
          <label class="form-label">Category</label>
              <select name="category_id" class="form-select" id="edit-category" required>
            <% if (categories && categories.length > 0) { %>
              <% categories.forEach(cat => { %>
                <option value="<%= cat.id %>" <%= cat.id === course.category_id ? 'selected' : '' %>><%= cat.name %></option>
              <% }) %>
            <% } else { %>
              <option value="">No categories available</option>
            <% } %>
          </select>

        </div>

            <div class="mb-3">
              <label class="form-label">Key Takeaways</label>
              <% if (course.takeaways && course.takeaways.length > 0) { %>
                <div id="takeaways-container">
                <% course.takeaways.forEach(function(takeaway, index) { %>

                    <input 
                    type="text" 
                    name="takeaways" 
                    class="form-control <% if (index !== 0) { %>mt-2<% } %>" 
                    placeholder="Enter takeaway <%= index + 1 %>" 
                    value="<%= takeaway %>" 
                    required>
                    <% }); %>
                  </div>
                  <button type="button" class="btn btn-sm btn-outline-primary mt-2" id="add-takeaway">+ Add Another</button>
              <% } else { %>
                 <div id="takeaways-container">
                    <!-- Initial Fields (or rendered from EJS) -->
                    <input type="text" name="takeaways" class="form-control mb-1" placeholder="Enter takeaway 1" required>
                    <input type="text" name="takeaways" class="form-control mb-1" placeholder="Enter takeaway 2" required>
                    <input type="text" name="takeaways" class="form-control mb-1" placeholder="Enter takeaway 3" required>
                  </div>
                  <button type="button" class="btn btn-sm btn-outline-primary mt-2" id="add-takeaway">+ Add Another</button>
              <% } %>
            </div>
      </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
      </form>
    </div>
  </div>

