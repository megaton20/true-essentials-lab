<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Class Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />

  <style>
    .profile-img {
      width: 40px;
      height: 40px;
      object-fit: cover;
      border-radius: 50%;
    }
  </style>
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top px-3">
    <div class="container-fluid">
      <button class="btn d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar">
        <i class="fas fa-bars"></i>
      </button>
      <span class="navbar-brand fw-bold">Admin Panel</span>
      <div class="ms-auto d-flex align-items-center gap-3">
        <div class="position-relative">
          <i class="fas fa-bell fs-5 text-secondary"></i>
          <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
        </div>
        <img src="https://i.pravatar.cc/40" alt="Profile" class="profile-img" />
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="offcanvas offcanvas-start bg-white" tabindex="-1" id="offcanvasSidebar">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title fw-bold">Admin Menu</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body">
      <nav class="nav flex-column">
        <a href="/admin" class="nav-link text-dark">Dashboard</a>
        <a href="/admin/classes" class="nav-link text-dark">Classes</a>
        <a href="/admin/seasons" class="nav-link text-dark">Seasons</a>
        <a href="/admin/affiliate/applications" class="nav-link text-dark">Affiliate Applications</a>
        <a href="/admin/referral" class="nav-link text-dark">Scout Locations</a>
        <a href="/admin/setting" class="nav-link text-dark">Settings</a>
        <a href="/logout" class="nav-link text-dark">Logout</a>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container-fluid mt-4">
    <div class="row">
      <!-- Static Sidebar -->
      <div class="col-lg-3 d-none d-lg-block">
        <div class="bg-white shadow-sm p-3 rounded">
          <h5 class="fw-bold mb-4">Admin Menu</h5>
          <nav class="nav flex-column">
            <a href="/admin" class="nav-link text-dark">Dashboard</a>
            <a href="/admin/classes" class="nav-link text-dark">Classes</a>
            <a href="/admin/seasons" class="nav-link text-dark">Seasons</a>
            <a href="/admin/affiliate/applications" class="nav-link text-dark">Affiliate Applications</a>
            <a href="/admin/referral" class="nav-link text-dark">Scout Locations</a>
            <a href="/admin/setting" class="nav-link text-dark">Settings</a>
            <a href="/logout" class="nav-link text-dark">Logout</a>
          </nav>
        </div>
      </div>

      <!-- Class Details Section -->
      <div class="col-lg-9">
        <main class="p-3">
          <%- include('../partials/messages') %>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/admin" class="btn btn-outline-primary btn-sm">Back</a>
          </div>
               
                    <h2 class="mb-4">üéì Season Management</h2>

                    <!-- Create Season Form -->
                    <div class="card mb-4 shadow-sm">
                      <div class="card-body">
                        <h5 class="card-title">‚ûï Create New Season</h5>
                        <form method="POST" action="/admin/seasons">
                          <div class="row g-2">
                            <div class="col-md-3">
                              <input name="name" class="form-control" placeholder="Season name" required>
                            </div>
                            <div class="col-md-3">
                              <input name="course" class="form-control" placeholder="Course name">
                            </div>
                            <div class="col-md-3">
                              <input name="reg_open" type="datetime-local" class="form-control" required>
                            </div>
                            <div class="col-md-3">
                              <input name="reg_close" type="datetime-local" class="form-control" required>
                            </div>
                          </div>
                          <button class="btn btn-primary mt-3">
                            <i class="fas fa-plus-circle"></i> Create Season
                          </button>
                        </form>
                      </div>
                    </div>

                    <!-- Active Season -->
                    <div class="card mb-4 shadow-sm">
                      <div class="card-body">
                        <h5 class="card-title text-success">üü¢ Active Season</h5>
                        <% if (active) { %>
                          <p class="mb-1">
                            <strong><%= active.name %></strong> - <em><%= active.course || 'No course listed' %></em>
                          </p>
                          <small class="text-muted">Registration closes: <%= active.reg_close.toLocaleString() %></small>
                        <% } else { %>
                          <p>No active season at the moment.</p>
                        <% } %>
                      </div>
                    </div>

                    <!-- Upcoming Season -->
                    <div class="card shadow-sm">
                      <div class="card-body">
                        <h5 class="card-title text-primary">‚è≥ Upcoming Season</h5>
                        <% if (upcoming) { %>
                          <p class="mb-1">
                            <strong><%= upcoming.name %></strong> - <em><%= upcoming.course || 'No course listed' %></em>
                          </p>
                          <small class="text-muted">Starts: <%= upcoming.reg_open.toLocaleString() %></small>
                        <% } else { %>
                          <p>No upcoming season scheduled.</p>
                        <% } %>
                      </div>
                    </div>
        </main>
      </div>
    </div>
  </div>


  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




 


