<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>affiliate application </title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>

<body>

  <div class="container-fluid vh-100">
    <div class="row h-100">
      <!-- left side nav -->

      <%-include('./partials/sidenav')%>

      <div class=" border bg-white col-md-10">
            <!-- top info -->
        <div class=" mt-2 mb-2">
          <div class="row">
            <div class="col-10">
              <a href="/admin"> back</a>
            </div>

             <%- include('../partials/messages') %>
          </div>
          <!-- top info ends -->
        </div>

           <section class="mt-5">

      <div class="mb-5">
        <div class="table-responsive">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Status</th>
                <th>Date & Time</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% applicationList.forEach(function(data, index) { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= data.status %></td>
                  <td><%= data.created_at.toLocaleString() %></td>
                  <td><a href="/admin/affiliate/applications/<%= data.id %>">View</a></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>



    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>









 


