<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Font Awesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }

    .dashboard-header {
      background-color: #343a40;
      color: white;
      padding: 20px;
    }

    .dashboard-header h1 {
      margin: 0;
    }

    .card {
      border-radius: 10px;
    }

    .modal-title {
      font-weight: bold;
    }

    .form-label {
      font-weight: 500;
    }

    .btn i {
      margin-right: 5px;
    }
  </style>
</head>
<body>

  <!-- Header -->
  <div class="dashboard-header text-center">
    <h1>Admin Dashboard</h1>
    <p class="lead">Manage Courses, Referrals, and Users</p>
  </div>

  <!-- Main Content -->
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>Dashboard Overview</h3>
      <div>
        <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#createCourseModal">
          <i class="fas fa-plus"></i> Create Course
        </button>
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#referralModal">
          <i class="fas fa-code"></i> Generate Referral
        </button>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-md-4">
        <div class="card text-white bg-primary shadow">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-users"></i> Students</h5>
            <p class="card-text">Total: 120</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-success shadow">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-book"></i> Courses</h5>
            <p class="card-text">Active: 15</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-dark shadow">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-code"></i> Referral Codes</h5>
            <p class="card-text">Active Codes: 8</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal: Create Course -->
  <div class="modal fade" id="createCourseModal" tabindex="-1" aria-labelledby="createCourseModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" id="courseForm">
        <div class="modal-header">
          <h5 class="modal-title" id="createCourseModalLabel">Create New Course</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="courseTitle" class="form-label">Course Title</label>
            <input type="text" class="form-control" id="courseTitle" name="courseTitle" required>
          </div>
          <div class="mb-3">
            <label for="courseDesc" class="form-label">Description</label>
            <textarea class="form-control" id="courseDesc" name="courseDesc" rows="3" required></textarea>
          </div>
          <div class="mb-3">
            <label for="courseCategory" class="form-label">Category</label>
            <input type="text" class="form-control" id="courseCategory" name="courseCategory">
          </div>
          <div class="mb-3">
            <label for="coursePrice" class="form-label">Price ($)</label>
            <input type="number" class="form-control" id="coursePrice" name="coursePrice" step="0.01" min="0">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Create Course</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal: Generate Referral -->
  <div class="modal fade" id="referralModal" tabindex="-1" aria-labelledby="referralModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" id="referralForm">
        <div class="modal-header">
          <h5 class="modal-title" id="referralModalLabel">Generate Referral Code</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="referralEmail" class="form-label">User Email (optional)</label>
            <input type="email" class="form-control" id="referralEmail" name="referralEmail">
          </div>
          <div class="mb-3">
            <label for="referralCode" class="form-label">Referral Code</label>
            <input type="text" class="form-control" id="referralCode" name="referralCode" required>
          </div>
          <div class="mb-3">
            <label for="referralExpires" class="form-label">Expires On</label>
            <input type="date" class="form-control" id="referralExpires" name="referralExpires">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-success"><i class="fas fa-magic"></i> Generate Code</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Simple JS Feedback -->
  <script>
    document.getElementById('courseForm').addEventListener('submit', function (e) {
      e.preventDefault();
      alert('Course created successfully!');
      this.reset();
      bootstrap.Modal.getInstance(document.getElementById('createCourseModal')).hide();
    });

    document.getElementById('referralForm').addEventListener('submit', function (e) {
      e.preventDefault();
      alert('Referral code generated!');
      this.reset();
      bootstrap.Modal.getInstance(document.getElementById('referralModal')).hide();
    });
  </script>
</body>
</html>
