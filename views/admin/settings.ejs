<!-- views/admin/settings.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Settings</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">System Settings</h2>

    <%- include('../partials/messages') %>

    <!-- Toggle: Registration -->
    <form action="/admin/setting/toggle/is_registration_open" method="POST" class="mb-4">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-check form-switch">
        <input 
          class="form-check-input" 
          type="checkbox" 
          id="toggleRegistration" 
          name="toggle" 
          onchange="this.form.submit()" 
          <%= settings.is_registration_open ? 'checked' : '' %>
        >
        <label class="form-check-label" for="toggleRegistration">
          Registration <%= settings.is_registration_open ? 'Enabled' : 'Disabled' %>
        </label>
      </div>
    </form>

    <!-- Toggle: Payment -->
    <form action="/admin/setting/toggle/is_payment_open" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="form-check form-switch">
        <input 
          class="form-check-input" 
          type="checkbox" 
          id="togglePayment" 
          name="toggle" 
          onchange="this.form.submit()" 
          <%= settings.is_payment_open ? 'checked' : '' %>
        >
        <label class="form-check-label" for="togglePayment">
          Payment <%= settings.is_payment_open ? 'Enabled' : 'Disabled' %>
        </label>
      </div>
    </form>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
