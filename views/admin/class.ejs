                                            <i class="fas fa-edit me-2"></i>Edit Class Details
                                        </button>
                                        <button class="btn btn-outline-warning text-start" data-bs-toggle="modal" data-bs-target="#completeModal" <%= singleClass.is_complete ? 'disabled' : '' %>>
                                            <i class="fas fa-check me-2"></i>Mark as Complete
                                        </button>
                                        <form action="/admin/class/<%= singleClass.id %>" method="post">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-outline-danger text-start w-100" onclick="return confirm('Are you sure you want to delete this class?')">
                                                <i class="fas fa-trash me-2"></i>Delete Class
                                            </button>
