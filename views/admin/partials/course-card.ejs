<div class="col-md-3 mb-3">
  <div class="class-card border d-flex flex-column justify-content-between p-2 shadow-sm" data-aos="fade" data-aos-delay="<%= (index + 1) * 100 %>">
    
    <!-- Top: Status Badge -->
    <div class="d-flex justify-content-between align-items-center mb-2">
      <span class="status-badge">Active: <%= data.status %></span>
    </div>

    <!-- Middle: Title and Date -->
    <div class="mb-2">
      <p class="text-muted mb-1 text-truncate" title="<%= data.title %>"><%= data.title %></p>
      <p class="text-muted mb-0" style="font-size: 11px;">
        <%= new Date(data.created_at).toLocaleString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: 'numeric',
          minute: '2-digit'
        }) %>
      </p>
    </div>

    <!-- Bottom: Action -->
    <div class="d-flex gap-1 flex-wrap">
      <a href="/admin/courses/details/<%= data.id %>" class="btn btn-sm btn-outline-secondary">Details</a>
      <a href="/admin/course/class/<%= data.id %>" class="btn btn-sm btn-outline-secondary">Scheduled</a>
      <a href="#" 
         class="btn btn-sm btn-outline-warning"
         data-bs-toggle="modal" 
         data-bs-target="#editCourseModal"
         data-id="<%= data.id %>"
         data-title="<%= data.title %>"
         data-description="<%= data.description %>">
        <i class="fas fa-edit"></i>
      </a>

          <form action="/admin/course/<%= data.id %>" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-outline-danger"><i class="fas fa-trash"></i></button>
          </form>
    </div>

  </div>
</div>
