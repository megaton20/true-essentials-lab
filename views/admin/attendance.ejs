<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Attendance Tracker</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>

  <div class="container my-5">
    <h2 class="mb-4">Today's Attendance</h2>

    <table class="table table-bordered table-hover">
      <thead class="table-primary">
        <tr>
          <th>#</th>
          <th>Student Name</th>
          <th>Course</th>
          <th>Status</th>
          <th>Mark Attendance</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>John Smith</td>
          <td>Web Dev 101</td>
          <td><span class="badge bg-secondary">Absent</span></td>
          <td>
            <button class="btn btn-success btn-sm" onclick="markPresent(this)">
              <i class="fas fa-check-circle"></i> Present
            </button>
          </td>
        </tr>
        <tr>
          <td>2</td>
          <td>Aisha Bello</td>
          <td>JavaScript Basics</td>
          <td><span class="badge bg-secondary">Absent</span></td>
          <td>
            <button class="btn btn-success btn-sm" onclick="markPresent(this)">
              <i class="fas fa-check-circle"></i> Present
            </button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <script>
    function markPresent(button) {
      const row = button.closest('tr');
      const statusCell = row.querySelector('td:nth-child(4)');
      statusCell.innerHTML = '<span class="badge bg-success">Present</span>';
      button.disabled = true;
      button.innerHTML = '<i class="fas fa-check-double"></i> Marked';
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
