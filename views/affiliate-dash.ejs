<script>
  function copyRefLink() {
    const text = document.getElementById('refLink').innerText;
    navigator.clipboard.writeText(text).then(() => {
      // Toast notification instead of alert
      showToast('Referral link copied to clipboard!', 'success');
    });
  }
</script>

