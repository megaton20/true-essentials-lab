    <style>
        :root {
            --primary: #34a13d;
            --primary-dark: #0b4930;
            --secondary: #eaf06a;
            --success: #4cc9f0;
            --warning: #f72585;
            --light: #f8f9fa;
            --dark: #212529;
            --gray: #6c757d;
            --light-gray: #e9ecef;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --gradient-primary: linear-gradient(135deg, #0b4930 0%, #126b47 100%);
            --transition: all 0.3s ease;
        }

    
   


 

        .card-header.bg-gradient-primary {
            background: var(--gradient-primary) !important;
        }

        .card-header.bg-gradient-dark {
            background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%) !important;
        }



        .file-upload-area {
            border: 2px dashed var(--light-gray);
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            transition: var(--transition);
            cursor: pointer;
            background: #fafbfc;
        }

        .file-upload-area:hover {
            border-color: var(--primary);
            background: rgba(67, 97, 238, 0.03);
        }

        .file-upload-area i {
            margin-bottom: 1rem;
            opacity: 0.7;
        }

        .video-container {
            background: #000;
            overflow: hidden;
        }

        .video-playlist-item {
            border: 2px solid transparent;
            border-radius: 12px;
            padding: 10px;
            margin-bottom: 0.75rem;
            transition: var(--transition);
            cursor: pointer;
            background: white;
        }

        .video-playlist-item:hover {
            border-color: var(--primary);
        }

        .video-playlist-item.active {
            border-color: var(--primary);
            background: rgba(67, 97, 238, 0.05);
        }

        .progress {
            height: 12px;
            border-radius: 10px;
            background: var(--light-gray);
        }

        .progress-bar {
            border-radius: 10px;
            transition: width 0.3s ease;
        }

        .badge {
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 600;
        }

        .form-control {
            border-radius: 10px;
            border: 2px solid var(--light-gray);
            padding: 0.75rem 1rem;
            transition: var(--transition);
        }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
        }

        .form-control-lg {
            padding: 1rem 1.25rem;
            font-size: 1.1rem;
        }

        .toast {
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        .attendance-list {
            max-height: 200px;
            overflow-y: auto;
        }

        .attendance-list::-webkit-scrollbar {
            width: 6px;
        }

        .attendance-list::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }

        .attendance-list::-webkit-scrollbar-thumb {
            background: #c1c1c1;
            border-radius: 3px;
        }

        .attendance-list::-webkit-scrollbar-thumb:hover {
            background: #a8a8a8;
        }

        .cursor-pointer {
            cursor: pointer;
        }

        .text-gradient {
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .icon-circle {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
        }

        .icon-circle-primary {
            background: rgba(67, 97, 238, 0.1);
            color: var(--primary);
        }

        .icon-circle-success {
            background: rgba(76, 201, 240, 0.1);
            color: var(--success);
        }

        .icon-circle-warning {
            background: rgba(247, 37, 133, 0.1);
            color: var(--warning);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .fade-in {
            animation: fadeIn 0.6s ease-out;
        }

        .stats-number {
            font-size: 2rem;
            font-weight: 800;
            color: var(--primary);
            line-height: 1;
        }

        .stats-label {
            font-size: 0.9rem;
            color: var(--gray);
            font-weight: 600;
        }
    </style>

    <!-- Navbar -->
    <%-include('./partials/topnav') %>

    <!-- Sidebar -->
    <%-include('./partials/sidenav') %>

    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Static Sidebar -->
            <div class="col-lg-3 d-none d-lg-block">
                <%-include('./partials/staticsidebar') %>
            </div>

            <!-- Class Details Section -->
            <div class="col-lg-9">
                <main class="p-3">
                    <!-- Header Section -->
                    <div class="d-flex justify-content-between align-items-center mb-4 fade-in">
                        <div>
                            <a href="/teacher/course/class/<%=courseId%>" class="btn btn-light btn-sm me-3">
                                <i class="fas fa-arrow-left me-2"></i>Back to Classes
                            </a>
                            <h1 class="h3 mb-0 text-dark fw-bold"><%= singleClass.title %></h1>
                            <p class="text-muted mb-0 mt-1"><%= singleClass.description || 'No description provided' %></p>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editClassModal">
                                <i class="fas fa-edit me-2"></i>Edit Class
                            </button>
                        </div>
                    </div>

                    <%- include('../partials/messages') %>

                    <!-- Main Content Grid -->
                    <div class="row g-4">
                        <!-- Left Column -->
                        <div class="col-lg-8">
                            <!-- Video Player Section -->
                            <div class="card mb-4 fade-in">
                                <div class="card-header bg-gradient-dark text-white py-3">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-play-circle me-2"></i>Course Video Content
                                    </h5>
                                </div>
                                <div class="card-body p-0">
                                    <% if (courseVideos && courseVideos.length > 0) { %>
                                        <div class="video-container">
                                            <video
                                                id="mainVideo"
                                                class="w-100"
                                                style="height: 400px; object-fit: contain;"
                                                controls
                                                poster="<%= courseVideos[0]?.thumbnail_url %>"
                                            >
                                                <source src="<%= courseVideos[0]?.video_url %>" type="video/mp4">
                                                Your browser does not support the video tag.
                                            </video>
                                        </div>
                                        <div class="p-4">
                                            <h4 class="text-dark mb-2" id="currentVideoTitle"><%= courseVideos[0].title || 'Part 1' %></h4>
                                            <div class="d-flex align-items-center text-muted">
                                                <span class="me-3">
                                                    <i class="fas fa-film me-1"></i>
                                                    Part <span class="part-number"><%= courseVideos[0].part_number %></span>
                                                </span>
                                                <span>
                                                    <i class="fas fa-clock me-1"></i>
                                                    <%= courseVideos[0].duration || 'Duration not available' %>
                                                </span>
                                            </div>

                                               
                                                 <p class="text-muted mb-0 mt-1"><%= courseVideos[0].description || 'No description provided' %></p>
                                        </div>
                                    <% } else { %>
                                        <div class="text-center py-5">
                                            <i class="fas fa-video-slash fa-4x text-muted mb-4"></i>
                                            <h4 class="text-muted">No Videos Available</h4>
                                            <p class="text-muted mb-4">Upload your first video to get started with the course content.</p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Upload Section -->
                            <div class="card fade-in">
                                <div class="card-header bg-gradient-primary text-white py-3">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-cloud-upload-alt me-2"></i>Upload New Video Part
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <!-- Cloudinary Configuration -->
                                    <script>
                                        const cloudName = '<%= process.env.CLOUD_NAME %>';
                                        const uploadPreset = '<%= process.env.CLOUDINARY_UPLOAD_PRESET || "teacher-videos" %>';
                                        
                                        if (!cloudName || cloudName === '' || !uploadPreset || uploadPreset === '') {
                                            document.write(`
                                                <div class="alert alert-warning">
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                                                        <div>
                                                            <h6 class="alert-heading mb-1">Upload Configuration Error</h6>
                                                            <p class="mb-0">Cloudinary upload is not configured. Please contact administrator.</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            `);
                                        }
                                    </script>

                                    <form id="videoUploadForm">
                                        <input type="hidden" name="classeId" value="<%= singleClass.id %>">

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label for="title" class="form-label fw-semibold">Video Title</label>
                                                    <input type="text" name="title" id="title" class="form-control" placeholder="Enter a descriptive title...">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label for="part_number" class="form-label fw-semibold">Part Number</label>
                                                    <input type="number" name="part_number" id="part_number" class="form-control" required min="1" placeholder="1">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label fw-semibold">Video File</label>
                                                    <div class="file-upload-area" onclick="document.getElementById('video').click()">
                                                        <i class="fas fa-file-video fa-3x text-primary mb-3"></i>
                                                        <h6 class="mb-2">Click to upload video file</h6>
                                                        <p class="text-muted small mb-3">MP4, MOV, AVI • Maximum 500MB</p>
                                                        <input type="file" name="video" id="video" class="d-none" accept="video/*" required>
                                                        <div id="videoFileName" class="small text-muted mt-2"></div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label fw-semibold">Thumbnail Image</label>
                                                    <div class="file-upload-area" onclick="document.getElementById('thumbnail').click()">
                                                        <i class="fas fa-image fa-3x text-success mb-3"></i>
                                                        <h6 class="mb-2">Click to upload thumbnail</h6>
                                                        <p class="text-muted small mb-3">JPG, PNG, WebP • Maximum 10MB</p>
                                                        <input type="file" name="thumbnail" id="thumbnail" class="d-none" accept="image/*" required>
                                                        <div id="thumbnailFileName" class="small text-muted mt-2"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Progress Bar -->
                                        <div id="uploadProgressContainer" class="mb-4" style="display: none;">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <span class="fw-semibold">Upload Progress</span>
                                                <span id="uploadPercentage" class="text-primary fw-bold">0%</span>
                                            </div>
                                            <div class="progress">
                                                <div id="uploadProgressBar" class="progress-bar progress-bar-striped progress-bar-animated" style="width: 0%"></div>
                                            </div>
                                            <div class="mt-2">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small id="uploadStatus" class="text-muted">Preparing upload...</small>
                                                    <small id="uploadSpeed" class="text-muted fw-semibold"></small>
                                                </div>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary w-100 py-3 fw-semibold" id="uploadBtn">
                                            <span id="uploadBtnText">
                                                <i class="fas fa-cloud-upload-alt me-2"></i>Upload Video Part
                                            </span>
                                            <span id="uploadSpinner" style="display: none;">
                                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                                Uploading...
                                            </span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-lg-4">
                            <!-- Video Playlist -->
                            <% if (courseVideos && courseVideos.length > 0) { %>
                                <div class="card mb-4 fade-in">
                                    <div class="card-header bg-gradient-primary text-white py-3">
                                        <h5 class="card-title mb-0 d-flex justify-content-between align-items-center">
                                            <span><i class="fas fa-list me-2"></i>Video Playlist</span>
                                            <span class="badge bg-light text-dark"><%= courseVideos.length %> videos</span>
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="playlist-container" style="max-height: 400px; overflow-y: auto;">
                                            <% courseVideos.forEach((video, index) => { %>
                                                <div class="video-playlist-item <%= index === 0 ? 'active' : '' %>"
                                                     onclick="loadVideo('<%= video.video_url %>', '<%= video.thumbnail_url %>', '<%= video.title %>', <%= video.part_number %>, this)">
                                                    <div class="d-flex align-items-center">
                                                        <div class="position-relative me-3">
                                                            <img src="<%= video.thumbnail_url %>" alt="Thumbnail" class="rounded-2" style="width: 60px; height: 45px; object-fit: cover;">
                                                            <div class="position-absolute bottom-0 end-0 bg-dark bg-opacity-75 text-white px-1 rounded-start">
                                                                <small><%= video.duration || '--:--' %></small>
                                                            </div>
                                                        </div>
                                                        <div class="flex-grow-1">
                                                            <h6 class="mb-1 text-truncate" style="max-width: 180px;"><%= video.title || `Part ${video.part_number}` %></h6>
                                                            <small class="text-muted">Part <%= video.part_number %></small>
                                                        </div>
                                                        <form action="/teacher/class/video/delete" method="POST" class="ms-2">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <input type="hidden" name="classVideoId" value="<%= video.id %>">
                                                            <input type="hidden" name="class_id" value="<%= video.class_id %>">
                                                            <input type="hidden" name="video_public_id" value="<%= video.video_public_id %>">
                                                            <input type="hidden" name="thumbnail_public_id" value="<%= video.thumbnail_public_id %>">
                                                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this video?')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Class Details -->
                            <div class="card mb-4 fade-in">
                                <div class="card-header bg-gradient-primary text-white py-3">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-info-circle me-2"></i>Class Details
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label class="form-label text-muted small mb-1">Scheduled Time</label>
                                        <p class="mb-0">
                                            <i class="fas fa-calendar text-primary me-2"></i>
                                            <%= new Date(singleClass.scheduled_at).toLocaleString() %>
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label text-muted small mb-1">Meeting Link</label>
                                        <p class="mb-0">
                                            <a href="<%= singleClass.meet_link %>" target="_blank" class="text-decoration-none">
                                                <i class="fas fa-video text-success me-2"></i>Join Meeting
                                            </a>
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label text-muted small mb-1">Join Code</label>
                                        <p class="mb-0">
                                            <i class="fas fa-key text-warning me-2"></i>
                                            <%= singleClass.join_code || 'Not available' %>
                                        </p>
                                    </div>
                                    <div class="border-top pt-3">
                                        <form action="/teacher/class/<%= singleClass.id %>/<%= singleClass.show_link ? 'false' : 'true' %>" method="post">
                                            <input type="hidden" name="_method" value="PUT">
                                            <input type="hidden" name="courseId" value="<%=courseId%>">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <label class="form-label text-muted small mb-0">Link Visibility</label>
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="toggleShowLink" onchange="this.form.submit()" <%= singleClass.show_link ? 'checked' : '' %>>
                                                    <label class="form-check-label small" for="toggleShowLink">
                                                        <%= singleClass.show_link ? 'Visible' : 'Hidden' %>
                                                    </label>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- Attendance -->
                            <div class="card fade-in">
                                <div class="card-header bg-gradient-primary text-white py-3">
                                    <h5 class="card-title mb-0 d-flex justify-content-between align-items-center">
                                        <span><i class="fas fa-users me-2"></i>Attendance</span>
                                        <span class="badge bg-light text-dark"><%= attendance.length %></span>
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <% if (attendance.length === 0) { %>
                                        <div class="text-center py-3">
                                            <i class="fas fa-user-slash fa-2x text-muted mb-3"></i>
                                            <p class="text-muted mb-0">No students have joined yet</p>
                                        </div>
                                    <% } else { %>
                                        <div class="attendance-list">
                                            <% attendance.forEach(function(user) { %>
                                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1"><%= user.full_name || 'Unnamed Student' %></h6>
                                                        <small class="text-muted d-block"><%= user.email %></small>
                                                        <small class="text-muted">
                                                            <i class="fas fa-clock me-1"></i>
                                                            <%= new Date(user.joined_at).toLocaleString() %>
                                                        </small>
                                                    </div>
                                                    <form action="/teacher/class/<%= singleClass.id %>/grant-access/<%= user.id %>" method="post">
                                                        <input type="hidden" name="_method" value="PUT">
                                                        <div class="form-check form-switch">
                                                            <input class="form-check-input" type="checkbox" name="granted" onchange="this.form.submit()" <%= user.status ? 'checked' : '' %>>
                                                        </div>
                                                    </form>
                                                </div>
                                            <% }) %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div class="modal fade" id="editClassModal" tabindex="-1" aria-labelledby="editClassModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <form class="modal-content" method="post" action="/teacher/class/<%= singleClass.id %>/edit">
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" name="courseId" value="<%=courseId%>">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="fas fa-edit me-2"></i>Edit Class Details
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="classTitle" class="form-label fw-semibold">Class Title</label>
                                <input type="text" class="form-control" id="classTitle" name="title" value="<%= singleClass.title %>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="scheduledAt" class="form-label fw-semibold">Scheduled Date & Time</label>
                                <input type="datetime-local" class="form-control" id="scheduledAt" name="scheduled_at"
                                    value="<%= new Date(singleClass.scheduled_at).toISOString().slice(0, 16) %>" required>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="classDesc" class="form-label fw-semibold">Description</label>
                        <textarea class="form-control" id="classDesc" name="description" rows="4" required><%= singleClass.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="meetLink" class="form-label fw-semibold">Meeting Link</label>
                        <input type="url" class="form-control" id="meetLink" name="meet_link" value="<%= singleClass.meet_link %>" placeholder="https://meet.google.com/abc-def-ghi">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Toast Notification -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="uploadToast" class="toast border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i id="toastIcon" class="fas fa-check-circle me-2 text-success"></i>
                <strong id="toastTitle" class="me-auto">Success</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                Upload completed successfully!
            </div>
        </div>
    </div>

<script>
    // Video loading function
    function loadVideo(url, poster, title, partNumber, element) {
        const video = document.getElementById('mainVideo');
        video.src = url;
        video.poster = poster;
        video.load();
        video.play();
        
        // Update video info
        document.getElementById('currentVideoTitle').innerText = title;
        
        // Update active state
        document.querySelectorAll('.video-playlist-item').forEach(item => {
            item.classList.remove('active');
        });
        element.classList.add('active');
    }

    // File input handlers
    document.getElementById('video').addEventListener('change', function(e) {
        const fileName = e.target.files[0]?.name || 'No file chosen';
        document.getElementById('videoFileName').innerHTML = `<i class="fas fa-file-video me-1"></i>${fileName}`;
    });

    document.getElementById('thumbnail').addEventListener('change', function(e) {
        const fileName = e.target.files[0]?.name || 'No file chosen';
        document.getElementById('thumbnailFileName').innerHTML = `<i class="fas fa-image me-1"></i>${fileName}`;
    });

    // True Client-Side Cloudinary Upload
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('videoUploadForm');
        const uploadBtn = document.getElementById('uploadBtn');
        const btnText = document.getElementById('uploadBtnText');
        const spinner = document.getElementById('uploadSpinner');
        const progressContainer = document.getElementById('uploadProgressContainer');
        const progressBar = document.getElementById('uploadProgressBar');
        const uploadPercentage = document.getElementById('uploadPercentage');
        const uploadStatus = document.getElementById('uploadStatus');
        const uploadSpeed = document.getElementById('uploadSpeed');
        
        // Get Cloudinary configuration from EJS
        const cloudName = '<%= process.env.CLOUD_NAME %>';
        const uploadPreset = '<%= process.env.CLOUDINARY_UPLOAD_PRESET || "teacher-videos" %>';

        console.log('Cloudinary Config Loaded:', { cloudName, uploadPreset });

        // Validate Cloudinary config
        if (!cloudName || cloudName === '' || !uploadPreset || uploadPreset === '') {
            console.error('Cloudinary configuration is missing!');
            uploadBtn.disabled = true;
            uploadBtn.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i>Upload Disabled - Configuration Error';
            uploadBtn.className = 'btn btn-warning w-100';
            return;
        }

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            if (!validateForm()) {
                return;
            }

            setUploadState(true);
            showProgressContainer();
            
            try {
                const videoFile = document.getElementById('video').files[0];
                const thumbnailFile = document.getElementById('thumbnail').files[0];
                const title = document.getElementById('title').value;
                const partNumber = document.getElementById('part_number').value;
                const classeId = '<%= singleClass.id %>';

                uploadStatus.textContent = 'Uploading to Cloudinary...';

                // Upload both files to Cloudinary in parallel
                const [videoResult, thumbnailResult] = await Promise.all([
                    uploadToCloudinary(videoFile, 'video'),
                    uploadToCloudinary(thumbnailFile, 'image')
                ]);

                console.log('Cloudinary upload results:', { videoResult, thumbnailResult });

                uploadStatus.textContent = 'Saving to database...';
                updateProgress(100, 'Finalizing...');

                // Save to our database
                const saveResult = await saveVideoInfo({
                    title,
                    part_number: partNumber,
                    classeId,
                    videoUrl: videoResult.secure_url,
                    thumbnailUrl: thumbnailResult.secure_url,
                    videoPublicId: videoResult.public_id,
                    thumbnailPublicId: thumbnailResult.public_id
                });

                if (saveResult.success) {
                    showToast('Success!', 'Video uploaded successfully', 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                } else {
                    throw new Error(saveResult.message);
                }

            } catch (error) {
                console.error('Upload error:', error);
                showToast('Upload Failed', error.message, 'error');
                resetUploadState();
            }
        });

        // Upload file directly to Cloudinary
        async function uploadToCloudinary(file, resourceType) {
            return new Promise((resolve, reject) => {
                const formData = new FormData();
                formData.append('file', file);
                formData.append('upload_preset', uploadPreset);
                formData.append('resource_type', resourceType);

                const xhr = new XMLHttpRequest();
                const startTime = Date.now();
                
                // Progress tracking for Cloudinary upload
                xhr.upload.addEventListener('progress', function(e) {
                    if (e.lengthComputable) {
                        const percentComplete = (e.loaded / e.total) * 100;
                        const fileType = resourceType === 'video' ? 'video' : 'thumbnail';
                        updateProgress(percentComplete, `Uploading ${fileType} to Cloudinary...`);
                        
                        // Calculate upload speed
                        const currentTime = Date.now();
                        const timeElapsed = (currentTime - startTime) / 1000;
                        const speed = e.loaded / timeElapsed;
                        uploadSpeed.textContent = `Speed: ${formatBytes(speed)}/s`;
                    }
                });

                xhr.addEventListener('load', function() {
                    if (xhr.status === 200) {
                        try {
                            const result = JSON.parse(xhr.responseText);
                            console.log(`Cloudinary ${resourceType} upload success:`, result.public_id);
                            resolve(result);
                        } catch (parseError) {
                            console.error('Failed to parse Cloudinary response:', xhr.responseText);
                            reject(new Error('Failed to parse Cloudinary response'));
                        }
                    } else {
                        console.error(`Cloudinary upload failed: ${xhr.status} - ${xhr.statusText}`);
                        reject(new Error(`Cloudinary upload failed: ${xhr.statusText}`));
                    }
                });

                xhr.addEventListener('error', function() {
                    console.error('Cloudinary upload network error');
                    reject(new Error('Cloudinary upload failed - network error'));
                });

                xhr.open('POST', `https://api.cloudinary.com/v1_1/${cloudName}/${resourceType}/upload`);
                xhr.send(formData);
            });
        }

        // Save video info to our database
        async function saveVideoInfo(videoData) {
            try {
                const response = await fetch('/teacher/class/video-part-save', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(videoData)
                });
                
                if (!response.ok) {
                    throw new Error(`Server responded with ${response.status}`);
                }
                
                return await response.json();
            } catch (error) {
                console.error('Error saving video info:', error);
                throw new Error('Failed to save video information to database');
            }
        }

        // Helper functions
        function updateProgress(percent, status) {
            const roundedPercent = Math.round(percent);
            progressBar.style.width = `${roundedPercent}%`;
            uploadPercentage.textContent = `${roundedPercent}%`;
            uploadStatus.textContent = status;
            
            // Change color based on progress
            if (percent < 30) {
                progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated bg-warning';
            } else if (percent < 70) {
                progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated bg-info';
            } else {
                progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated bg-success';
            }
        }

        function showProgressContainer() {
            progressContainer.style.display = 'block';
            updateProgress(0, 'Preparing upload...');
        }

        function hideProgressContainer() {
            progressContainer.style.display = 'none';
        }

        function setUploadState(uploading) {
            if (uploading) {
                uploadBtn.disabled = true;
                btnText.style.display = 'none';
                spinner.style.display = 'inline-block';
                
                // Disable all form inputs during upload
                const inputs = form.querySelectorAll('input, button, textarea, select');
                inputs.forEach(input => {
                    input.disabled = true;
                });
            } else {
                uploadBtn.disabled = false;
                btnText.style.display = 'inline-block';
                spinner.style.display = 'none';
                
                // Enable all form inputs
                const inputs = form.querySelectorAll('input, button, textarea, select');
                inputs.forEach(input => {
                    input.disabled = false;
                });
            }
        }

        function resetUploadState() {
            setUploadState(false);
            hideProgressContainer();
            uploadSpeed.textContent = '';
        }

        function validateForm() {
            const videoFile = document.getElementById('video').files[0];
            const thumbnailFile = document.getElementById('thumbnail').files[0];
            const partNumber = document.getElementById('part_number').value;

            // Basic validation
            if (!videoFile || !thumbnailFile || !partNumber) {
                showToast('Validation Error', 'Please fill all required fields', 'error');
                return false;
            }

            // File size validation
            const maxVideoSize = 500 * 1024 * 1024; // 500MB
            const maxThumbSize = 10 * 1024 * 1024; // 10MB

            if (videoFile.size > maxVideoSize) {
                showToast('File Too Large', 'Video file must be less than 500MB', 'error');
                return false;
            }

            if (thumbnailFile.size > maxThumbSize) {
                showToast('File Too Large', 'Thumbnail must be less than 10MB', 'error');
                return false;
            }

            // File type validation
            const allowedVideoTypes = ['video/mp4', 'video/mov', 'video/avi', 'video/webm'];
            const allowedImageTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp'];

            if (!allowedVideoTypes.includes(videoFile.type)) {
                showToast('Invalid File Type', 'Please upload MP4, MOV, AVI, or WebM video files', 'error');
                return false;
            }

            if (!allowedImageTypes.includes(thumbnailFile.type)) {
                showToast('Invalid File Type', 'Please upload JPG, PNG, or WebP image files', 'error');
                return false;
            }

            return true;
        }

        function showToast(title, message, type = 'info') {
            const toastEl = document.getElementById('uploadToast');
            const toastIcon = document.getElementById('toastIcon');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            
            const icons = {
                success: 'fa-check-circle text-success',
                error: 'fa-exclamation-circle text-danger',
                warning: 'fa-exclamation-triangle text-warning',
                info: 'fa-info-circle text-info'
            };
            
            toastIcon.className = `fas ${icons[type] || icons.info} me-2`;
            toastTitle.textContent = title;
            toastMessage.textContent = message;
            
            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        function formatBytes(bytes, decimals = 2) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const dm = decimals < 0 ? 0 : decimals;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + ' ' + sizes[i];
        }

        // Drag and drop functionality
        function setupDragAndDrop() {
            const uploadAreas = document.querySelectorAll('.file-upload-area');
            
            uploadAreas.forEach(area => {
                // Prevent default drag behaviors
                ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                    area.addEventListener(eventName, preventDefaults, false);
                });
                
                // Highlight drop area when item is dragged over it
                ['dragenter', 'dragover'].forEach(eventName => {
                    area.addEventListener(eventName, highlight, false);
                });
                
                ['dragleave', 'drop'].forEach(eventName => {
                    area.addEventListener(eventName, unhighlight, false);
                });
                
                // Handle dropped files
                area.addEventListener('drop', handleDrop, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            function highlight(e) {
                e.currentTarget.style.borderColor = '#4361ee';
                e.currentTarget.style.backgroundColor = 'rgba(67, 97, 238, 0.1)';
            }

            function unhighlight(e) {
                e.currentTarget.style.borderColor = '';
                e.currentTarget.style.backgroundColor = '';
            }

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                const inputId = e.currentTarget.querySelector('input[type="file"]').id;
                
                if (files.length > 0) {
                    const file = files[0];
                    const input = document.getElementById(inputId);
                    
                    // Create a new FileList (since we can't directly set files property)
                    const dataTransfer = new DataTransfer();
                    dataTransfer.items.add(file);
                    input.files = dataTransfer.files;
                    
                    // Trigger change event
                    input.dispatchEvent(new Event('change', { bubbles: true }));
                }
            }
        }

        // Initialize drag and drop
        setupDragAndDrop();

        // Auto-focus on title field for better UX
        document.getElementById('title')?.focus();

        // Add keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            // Ctrl + Enter to submit form (when not in textarea)
            if (e.ctrlKey && e.key === 'Enter' && e.target.tagName !== 'TEXTAREA') {
                e.preventDefault();
                document.getElementById('videoUploadForm').dispatchEvent(new Event('submit'));
            }
            
            // Escape key to reset form
            if (e.key === 'Escape') {
                resetUploadState();
            }
        });

        // Add file size display
        function updateFileSizeDisplay(inputId, displayId) {
            const input = document.getElementById(inputId);
            const display = document.getElementById(displayId);
            
            input.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const fileName = file.name;
                    const fileSize = formatBytes(file.size);
                    display.innerHTML = `<i class="fas fa-file me-1"></i>${fileName} (${fileSize})`;
                }
            });
        }

        // Initialize file size displays
        updateFileSizeDisplay('video', 'videoFileName');
        updateFileSizeDisplay('thumbnail', 'thumbnailFileName');

        // Add form reset functionality
        function resetForm() {
            document.getElementById('videoUploadForm').reset();
            document.getElementById('videoFileName').textContent = '';
            document.getElementById('thumbnailFileName').textContent = '';
            resetUploadState();
        }

        // Add reset button event listener if you add a reset button
        document.getElementById('resetBtn')?.addEventListener('click', resetForm);

        // Progress animation for stats cards
        function animateStats() {
            const statsNumbers = document.querySelectorAll('.stats-number');
            statsNumbers.forEach(stat => {
                const finalValue = stat.textContent;
                if (!isNaN(finalValue)) {
                    let current = 0;
                    const increment = finalValue / 50;
                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= finalValue) {
                            stat.textContent = finalValue;
                            clearInterval(timer);
                        } else {
                            stat.textContent = Math.floor(current);
                        }
                    }, 30);
                }
            });
        }

        // Initialize stats animation
        setTimeout(animateStats, 500);
    });
</script>