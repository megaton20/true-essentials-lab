<div class="col-md-3 mb-3">
  <div class="class-card border d-flex flex-column justify-content-between p-2 shadow-sm" data-aos="fade-up">
    
    <!-- Top: Status Badge -->
    <div class="d-flex justify-content-between align-items-center mb-2">
      <span class="status-badge">Active: <%= data.status %></span>
    </div>

    <!-- Middle: Title and Date -->
    <div class="mb-2">
      <p class="text-muted mb-1 text-truncate" title="<%= data.title %>"><%= data.title %></p>
      <p class="text-muted mb-0" style="font-size: 11px;">
        <%= new Date(data.created_at).toLocaleString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: 'numeric',
          minute: '2-digit'
        }) %>
      </p>
    </div>

    <!-- Bottom: Action -->
    <div class="d-flex gap-1 flex-wrap">
      <a href="/teacher/course/details/<%= data.id %>" class="btn btn-sm btn-outline-secondary">Details</a>
      <a href="/teacher/course/class/<%= data.id %>" class="btn btn-sm btn-outline-secondary">Scheduled</a>


                              <!-- Trigger Button -->
            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-<%= data.id %>">
              <i class="fas fa-trash"></i>
            </button>

    </div>

  </div>
</div>

                        <!-- Delete Confirmation Modal -->
            <div class="modal fade" id="deleteModal-<%= data.id %>" tabindex="-1" aria-labelledby="deleteModalLabel-<%= data.id %>" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel-<%= data.id %>">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    Are you sure you want to delete this course called:  <strong><%= data.title %></strong>?
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form action="/teacher/course/<%= data.id %>" method="post">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>