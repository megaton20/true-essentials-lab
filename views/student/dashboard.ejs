<!-- Navbar -->
<%-include('./partials/topnav') %>

<!-- Sidebar -->
<%-include('./partials/sidenav') %>

<!-- Main Content -->
<div class="container-fluid mt-4">
  <!-- Welcome Banner -->
  <div class="bg-success text-center text-white rounded p-4 mb-4 shadow-sm">
    <div class="text-center">
        <% if (season) { %>
                  <p class="mb-1">Welcome to</p>
                  <h4><%= season.name %></h4>
                  <p class="fw-bold">Season Ends: <span id="countdown">Loading... </span></p>
                  <div class="mt-2 text-muted small">
                  </div>
                <% } else { %>
                  <p class="mb-1">No active season at the moment.</p>
          <% } %>
          <hr>
      <p class="mb-0"><%= user.full_name %> You can now View Our courses and track your classes.</p>
    </div>
  </div>

  <div class="row">
    <!-- Static Sidebar for desktop -->
    <div class="col-lg-3 d-none d-lg-block">
      <%-include('./partials/staticsidebar') %>
    </div>

    <!-- Main Dashboard Section -->
    <div class="col-lg-9">
      <main class="p-0">
        <%- include('../partials/messages') %>

        <div class="mb-4">
          <div class="row">
               <!-- Course List -->
        <% if (courses) { %>

          <p class="mb-4">These are the following courses for this season</p>

          <% courses.forEach(function (data, index) { %>
            <div class="col-md-4 mb-3">
              <div class="p-3 border rounded shadow-sm h-100 d-flex flex-column justify-content-between class-card" 
                  data-aos="fade" 
                  data-aos-delay="<%= (index + 1) * 200 %>">
                  
                <div class="d-flex align-items-start gap-3">
                  <!-- Course Image -->
                  <div style="flex-shrink: 0;">
                    <img 
                      src="<%= data.image_url || '/images/online-class.png' %>" 
                      alt="Course image" 
                      class="img-fluid rounded" 
                      style="width: 100px; height: 100px; object-fit: cover;">
                  </div>

                  <!-- Course Info -->
                  <div class="flex-grow-1 text-truncate" style="min-width: 0;">
                    <h6 class="mb-1 text-truncate" title="<%= data.title %>"><%= data.title %></h6>
                    <p class="mb-1 text-muted text-truncate" style="font-size: 13px;"><%= data.description %></p>
                    <p class="mb-1 text-muted" style="font-size: 11px;">Total Classes: <%= data.total_sessions || 0 %></p>
                    
                    <!-- Progress Bar -->
                    <div class="progress mb-1" style="height: 8px;">
                      <div class="progress-bar" 
                          role="progressbar" 
                          style="width: <%= data.progress || 0 %>%;" 
                          aria-valuenow="<%= data.progress || 0 %>" 
                          aria-valuemin="0" 
                          aria-valuemax="100">
                      </div>
                    </div>
                    <small class="text-muted" style="font-size: 11px;">
                      <%= data.completed_sessions || 0 %> of <%= data.total_sessions || 0 %> completed
                    </small>
                  </div>
                </div>

                <!-- View Button -->
                <div class="text-end mt-3">
                  <a href="/user/course/<%= data.id %>" class="btn btn-sm btn-outline-dark w-100">View Classes</a>
                </div>

              </div>
            </div>
          <% }) %>

            
            <!-- if no course listed -->
               <% } else { %>
                  <p class="mb-1">No Course Listed for this SeasonS at the moment.</p>
                <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>

<!-- Countdown Script -->
<% if (season) { %>
<script>
  const regCloseDate = new Date("<%= new Date(season.reg_close).toISOString() %>");

  function updateCountdown() {
    const now = new Date().getTime();
    const distance = regCloseDate - now;

    if (distance <= 0) {
      document.getElementById("countdown").innerText = "Registration Closed";
      clearInterval(timer);
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    document.getElementById("countdown").innerText =
      `${days}d ${hours}h ${minutes}m ${seconds}s`;
  }

  const timer = setInterval(updateCountdown, 1000);
  updateCountdown(); // initial call
</script>
<% } %>
