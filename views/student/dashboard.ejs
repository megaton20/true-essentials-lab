<!-- Navbar -->
<%-include('./partials/topnav') %>

<!-- Sidebar -->
<%-include('./partials/sidenav') %>

<!-- Main Content -->
<div class="container-fluid mt-4">
 

  <div class="row">
    <!-- Static Sidebar for desktop -->
    <div class="col-lg-3 d-none d-lg-block">
      <%-include('./partials/staticsidebar') %>
    </div>

    <!-- Main Dashboard Section -->
    <div class="col-lg-9">
      <main class="p-0">
         <!-- Welcome Banner -->
  <div class="bg-grad text-center text-white rounded p-4 mb-4 shadow-sm">
    <div class="text-center">
        <% if (season) { %>
                  <p class="mb-1">Welcome to</p>
                  <h4><%= season.name %></h4>
                  <p class="fw-bold">Season Ends: <span id="countdown">Loading... </span></p>
                  <div class="mt-2 text-muted small">
                  </div>
                <% } else { %>
                  <p class="mb-1">No active season at the moment.</p>
          <% } %>
          <hr>
      <p class="mb-0"><%= user.full_name %> You can now View Our courses and track your classes.</p>
    </div>
  </div>
        <%- include('../partials/messages') %>

        <div class="mb-4">
           <div class="row">
         <% categories.forEach(cat => { %>
            <div class="col-md-3 mb-3">
              <a href="/user/category/<%= cat.id %>" class="text-decoration-none text-dark">
                <div class="p-3 border rounded shadow-sm h-100 d-flex flex-column justify-content-between class-card" data-aos="fade">
                  
                  <div class="d-flex align-items-start gap-3">
                    <!-- Icon or Image -->
                    <div>
                      <div class=" text-dark" style="background-color: #67fc96d2; ;border-radius: 50%; padding: 10px; padding-left: 10px;">
                          <i class="<%= cat.icon %>  fs-4 me-2""></i>
                      </div>

                    </div>

                    <!-- Info -->
                    <div class="text-truncate" style="min-width: 0;">
                      <p class="text-truncate mb-0"><%= cat.name %></p>                   
                      <p class="text-muted mt-0" style="font-size: 11px;">
                        <%= cat.course_count %> <%= cat.course_count == 1 ? 'Course' : 'Courses' %>
                      </p>
                    </div>
                  </div>


                </div>
              </a>
            </div>
          <% }) %>

           </div>

        </div>
      </main>
    </div>
  </div>
</div>

<!-- Countdown Script -->
<% if (season) { %>
<script>
  const regCloseDate = new Date("<%= new Date(season.reg_close).toISOString() %>");

  function updateCountdown() {
    const now = new Date().getTime();
    const distance = regCloseDate - now;

    if (distance <= 0) {
      document.getElementById("countdown").innerText = "Registration Closed";
      clearInterval(timer);
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    document.getElementById("countdown").innerText =
      `${days}d ${hours}h ${minutes}m ${seconds}s`;
  }

  const timer = setInterval(updateCountdown, 1000);
  updateCountdown(); // initial call
</script>
<% } %>
