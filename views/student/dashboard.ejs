                    <div class="week mb-5">
<div class="row">
  <% sessions.forEach(function(data) { 
    const scheduled = new Date(data.scheduled_at);
    const now = new Date();

    // Date-only comparison (ignore time)
    const scheduledDate = new Date(scheduled.getFullYear(), scheduled.getMonth(), scheduled.getDate());
    const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());

    let statusText = '';
    let statusClass = '';
    let showJoinButton = false;
    let showRejoinButton = false;

    const isToday = scheduledDate.getTime() === today.getTime();
    const isFuture = scheduledDate > today;
    const isPast = scheduledDate < today;

    if (data.status === false) {
      statusText = 'Pending';
      statusClass = 'status-upcoming';
    } else if (data.is_joined && isToday && data.status === true) {
      statusText = 'Attended';
      statusClass = 'status-attended';
      showRejoinButton = true;
    } else if (!data.is_joined && (isToday || isFuture) && data.status === true) {
      statusText = isToday ? 'Today' : 'Coming Up';
      statusClass = isToday ? 'status-inprogress' : 'status-upcoming';
      showJoinButton = true;
    } else if (isPast && !data.is_joined) {
      statusText = 'Missed';
      statusClass = 'status-missed';
    } else {
      statusText = 'done';
      statusClass = 'status-unknown';
    }
  %>

  <div class="col-md-4 mb-3">
    <div class="week-item class-card <%= statusClass %>">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <span class="status-badge"><%= statusText %></span>
      </div>
      <p class="text-muted mb-0" style="font-size: 15px;"><%= data.title %></p>
      <p class="text-muted mb-0" style="font-size: 10px;">
        <%= scheduled.toLocaleString('en-US', {
          year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: '2-digit'
        }) %>
      </p>

      <% if (data.status === false) { %>
        <p class="text-muted mt-2">Please wait...</p>
      <% } else if (showRejoinButton) { %>
        <a href="/class/<%= data.join_code %>" class="btn btn-sm btn-outline-success mt-2">Rejoin</a>
      <% } else if (showJoinButton) { %>
        <a href="/class/<%= data.join_code %>" class="btn btn-sm btn-outline-primary mt-2">Join</a>
      <% } %>
    </div>
  </div>
  <% }) %>
</div>



                    </div>

                  </div>

