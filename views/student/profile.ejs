<!-- Navbar -->
<%- include('./partials/topnav') %>
<!-- Sidebar -->
<%- include('./partials/sidenav') %>

<!-- Main Content -->
<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Static Sidebar for Desktop -->
      <div class="hidden lg:block lg:w-1/4">
        <%- include('./partials/staticsidebar') %>
      </div>

      <!-- Main Dashboard Section -->
      <div class="lg:w-3/4">
        <%- include('../partials/messages') %>

        <!-- Profile Header -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 mb-6">
          <div class="flex flex-col md:flex-row items-center md:items-start gap-4">
            <!-- Avatar -->
            <div class="flex-shrink-0">
              <div class="relative">
                <img src="/images/zap.png" alt="User Avatar" class="w-16 h-16 rounded-full border-2 border-white shadow">
              </div>
            </div>
            
            <!-- User Info -->
            <div class="flex-1">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 mb-3">
                <div>
                  <h1 class="text-xl font-bold text-gray-900 mb-1"><%= user.full_name %></h1>
                  <div class="text-sm text-gray-500">
                    <%= user.email %> â€¢ Joined <%= new Date(user.created_at).toLocaleDateString('en-US', { month: 'short', year: 'numeric' }) %>
                  </div>
                </div>
                <button onclick="document.getElementById('editUserModal').classList.remove('hidden')"
                        class="text-sm text-gray-600 hover:text-gray-900">
                  Edit Profile
                </button>
              </div>
              
              <!-- Bio -->
              <% if (user.bio) { %>
                <p class="text-sm text-gray-600"><%= user.bio %></p>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-6">
          <div class="bg-white rounded-lg border border-gray-200 p-3">
            <div class="text-sm text-gray-500 mb-1">Courses</div>
            <div class="text-lg font-semibold text-blue-600"><%= profileStats.total_courses || 0 %></div>
          </div>
          
          <div class="bg-white rounded-lg border border-gray-200 p-3">
            <div class="text-sm text-gray-500 mb-1">Attendance</div>
            <div class="text-lg font-semibold text-green-600">
              <%= profileStats.attendance_rate || 0 %>%
            </div>
          </div>
          
          <div class="bg-white rounded-lg border border-gray-200 p-3">
            <div class="text-sm text-gray-500 mb-1">Badges</div>
            <div class="text-lg font-semibold text-yellow-600"><%= profileStats.badges_earned || 0 %></div>
          </div>
          
          <div class="bg-white rounded-lg border border-gray-200 p-3">
            <div class="text-sm text-gray-500 mb-1">Progress</div>
            <div class="text-lg font-semibold text-purple-600"><%= profileStats.approval_rate || 0 %>%</div>
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
          <!-- Left Column - Courses -->
          <div class="lg:col-span-2">
            <!-- Courses Section -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200">
              <div class="p-4 border-b border-gray-200">
                <h3 class="text-base font-semibold text-gray-900">My Courses</h3>
              </div>
              
              <div class="p-4">
                <% if (enrolledCourses.length > 0) { %>
                  <div class="space-y-4">
                    <% enrolledCourses.forEach(course => { %>
                    <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors">
                      <div class="flex justify-between items-start mb-3">
                        <h4 class="text-sm font-semibold text-gray-900"><%= course.title %></h4>
                        <span class="text-sm font-medium text-blue-600"><%= course.progress_percentage %>%</span>
                      </div>
                      
                      <!-- Progress Bar -->
                      <div class="mb-4">
                        <div class="flex justify-between text-xs text-gray-500 mb-1">
                          <span>Progress</span>
                          <span><%= course.progress_percentage %>%</span>
                        </div>
                        <div class="w-full bg-gray-100 rounded-full h-1.5">
                          <div class="bg-blue-500 h-1.5 rounded-full" 
                               style="width: <%= course.progress_percentage %>%"></div>
                        </div>
                      </div>
                      
                      <!-- Stats -->
                      <div class="flex gap-3 text-xs text-gray-500">
                        <span><i class="fas fa-video text-gray-400 mr-1"></i><%= course.total_videos || 0 %> videos</span>
                        <span><i class="fas fa-calendar-check text-gray-400 mr-1"></i><%= course.attended_sessions %>/<%= course.total_sessions %> sessions</span>
                      </div>
                      
                      <!-- Recent Sessions -->
                      <% if (course.sessions && course.sessions.length > 0) { %>
                      <div class="mt-3 pt-3 border-t border-gray-100">
                        <div class="space-y-2">
                          <% course.sessions.slice(0, 2).forEach(session => { %>
                          <div class="flex justify-between items-center text-xs">
                            <span class="text-gray-600 truncate"><%= session.title %></span>
                            <span class="px-2 py-1 rounded text-xs <%= 
                              session.user_attended ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-600'
                            %>">
                              <%= session.user_attended ? 'Attended' : 'Missed' %>
                            </span>
                          </div>
                          <% }); %>
                        </div>
                      </div>
                      <% } %>
                    </div>
                    <% }); %>
                  </div>
                <% } else { %>
                  <div class="text-center py-6">
                    <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
                      <i class="fas fa-book-open text-gray-400"></i>
                    </div>
                    <p class="text-sm text-gray-500">No courses enrolled</p>
                  </div>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-4">
            <!-- Badges -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200">
              <div class="p-4 border-b border-gray-200">
                <h3 class="text-base font-semibold text-gray-900">Badges</h3>
              </div>
              
              <div class="p-4">
                <div class="space-y-3">
                  <% badgeProgress.forEach(badge => { %>
                  <div class="border border-gray-200 rounded-lg p-3">
                    <div class="flex items-start gap-2 mb-2">
                      <div class="text-lg"><%= badge.icon %></div>
                      <div class="flex-1">
                        <div class="text-sm font-medium text-gray-900"><%= badge.name %></div>
                        <div class="text-xs text-gray-500"><%= badge.description %></div>
                      </div>
                      <% if (badge.earned) { %>
                      <span class="text-xs text-green-600 font-medium">Earned</span>
                      <% } %>
                    </div>
                    
                    <% if (!badge.earned) { %>
                    <div class="mt-2">
                      <div class="flex justify-between text-xs text-gray-500 mb-1">
                        <span>Progress</span>
                        <span><%= badge.progress %>%</span>
                      </div>
                      <div class="w-full bg-gray-100 rounded-full h-1.5">
                        <div class="bg-yellow-500 h-1.5 rounded-full" 
                             style="width: <%= badge.progress %>%"></div>
                      </div>
                      <div class="text-xs text-gray-500 mt-1">
                        <%= badge.current %>/<%= badge.target %>
                      </div>
                    </div>
                    <% } %>
                  </div>
                  <% }); %>
                </div>
              </div>
            </div>

            <!-- Account Info -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-200">
              <div class="p-4 border-b border-gray-200">
                <h3 class="text-base font-semibold text-gray-900">Account</h3>
              </div>
              
              <div class="p-4">
                <div class="space-y-4">
                  <!-- Status -->
                  <div>
                    <div class="text-xs text-gray-500 mb-1">Status</div>
                    <div class="text-sm text-green-600 font-medium">Active</div>
                  </div>
                  
                  <!-- Phone -->
                  <% if (user.phone) { %>
                  <div>
                    <div class="text-xs text-gray-500 mb-1">Phone</div>
                    <div class="text-sm text-gray-900"><%= user.phone %></div>
                  </div>
                  <% } %>
                  
                  <!-- Location -->
                  <% if (user.location) { %>
                  <div>
                    <div class="text-xs text-gray-500 mb-1">Location</div>
                    <div class="text-sm text-gray-900"><%= user.location %></div>
                  </div>
                  <% } %>
                  
                  <!-- Bank Details -->
                  <% if (user.is_affiliate && affiliate) { %>
                  <div class="pt-4 border-t border-gray-100">
                    <div class="text-xs text-gray-500 mb-2">Bank Details</div>
                    <div class="space-y-2 text-sm">
                      <div><span class="text-gray-500">Bank:</span> <span class="text-gray-900"><%= affiliate.bank_name || 'Not set' %></span></div>
                      <div><span class="text-gray-500">Account:</span> <span class="text-gray-900"><%= affiliate.account_name || 'Not set' %></span></div>
                      <div><span class="text-gray-500">Number:</span> <span class="text-gray-900"><%= affiliate.account_number ? '****' + affiliate.account_number.slice(-4) : 'Not set' %></span></div>
                    </div>
                    <button onclick="document.getElementById('editBankModal').classList.remove('hidden')"
                            class="mt-3 text-sm text-blue-600 hover:text-blue-700">
                      Edit Bank Details
                    </button>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit User Modal -->
<div id="editUserModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50 overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-lg shadow-lg max-w-md w-full">
      <form action="/user/profile/update" method="POST">
        <div class="p-5">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Edit Profile</h3>
            <button type="button" onclick="closeModal('editUserModal')" 
                    class="text-gray-400 hover:text-gray-500">
              <i class="fas fa-times"></i>
            </button>
          </div>
          
          <div class="space-y-3">
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Full Name</label>
              <input type="text" name="fullName" value="<%= user.full_name %>"
                     class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm">
            </div>
            
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Phone</label>
              <input type="text" name="phone" value="<%= user.phone %>"
                     class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm">
            </div>
            
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Bio</label>
              <textarea name="bio" rows="2" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm"
                        placeholder="Tell us about yourself"><%= user.bio || '' %></textarea>
            </div>
          </div>
          
          <div class="flex justify-end gap-2 mt-5 pt-4 border-t border-gray-200">
            <button type="button" onclick="closeModal('editUserModal')"
                    class="px-3 py-2 text-sm text-gray-600 hover:text-gray-900">
              Cancel
            </button>
            <button type="submit" 
                    class="px-3 py-2 text-sm text-white bg-blue-500 hover:bg-blue-600 rounded-lg">
              Save
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Bank Modal -->
<div id="editBankModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50 overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-lg shadow-lg max-w-md w-full">
      <form action="/affiliate/update-bank" method="POST">
        <div class="p-5">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Bank Details</h3>
            <button type="button" onclick="closeModal('editBankModal')" 
                    class="text-gray-400 hover:text-gray-500">
              <i class="fas fa-times"></i>
            </button>
          </div>
          
          <div class="space-y-3">
            <!-- Bank Select -->
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Bank</label>
              <select name="bank_code" 
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" id="bankSelect">
                <option value="">Choose a Bank</option>
                <% banks.forEach(bank => { %>
                  <option value="<%= bank.code %>" <%= user.bank_code === bank.code ? 'selected' : '' %>>
                    <%= bank.name %>
                  </option>
                <% }) %>
              </select>
            </div>
            
            <!-- Account Number -->
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Account Number</label>
              <input type="text" name="account_number" value="<%= user.account_number || '' %>"
                     maxlength="10" pattern="\d{10}"
                     class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm" id="accountInput">
            </div>
            
            <!-- Account Name (Resolved) -->
            <div>
              <label class="block text-xs font-medium text-gray-700 mb-1">Account Name</label>
              <div id="accountNameDisplay" class="px-3 py-2 bg-gray-50 rounded-lg text-sm text-gray-700">
                <%= user.account_name || 'Enter bank and account number' %>
              </div>
              <input type="hidden" id="accountName" name="account_name" value="<%= user.account_name || '' %>">
              <div id="accountSpinner" class="text-xs text-gray-500 mt-1 hidden">
                <i class="fas fa-spinner fa-spin mr-1"></i> Resolving account...
              </div>
              <button id="retryResolveBtn" class="mt-1 text-xs text-blue-600 hover:text-blue-700 hidden">
                Retry
              </button>
            </div>
          </div>
          
          <div class="flex justify-end gap-2 mt-5 pt-4 border-t border-gray-200">
            <button type="button" onclick="closeModal('editBankModal')"
                    class="px-3 py-2 text-sm text-gray-600 hover:text-gray-900">
              Cancel
            </button>
            <button type="submit" 
                    class="px-3 py-2 text-sm text-white bg-blue-500 hover:bg-blue-600 rounded-lg">
              Save
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  // Modal functions
  function closeModal(modalId) {
    document.getElementById(modalId).classList.add('hidden');
  }
  
  // Close modals when clicking outside
  document.querySelectorAll('[id$="Modal"]').forEach(modal => {
    modal.addEventListener('click', function(e) {
      if (e.target.id === modal.id) {
        closeModal(modal.id);
      }
    });
  });
  
  // Close modals with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      document.querySelectorAll('[id$="Modal"]').forEach(modal => {
        if (!modal.classList.contains('hidden')) {
          closeModal(modal.id);
        }
      });
    }
  });

  // Bank account resolution AJAX functionality
  document.addEventListener('DOMContentLoaded', function() {
    const editBankModal = document.getElementById('editBankModal');
    if (!editBankModal) return;

    const accountInput = editBankModal.querySelector('#accountInput');
    const bankSelect = editBankModal.querySelector('#bankSelect');
    const nameDisplay = editBankModal.querySelector('#accountNameDisplay');
    const spinner = editBankModal.querySelector('#accountSpinner');
    const retryBtn = editBankModal.querySelector('#retryResolveBtn');
    const accountNameInput = editBankModal.querySelector('#accountName');

    let lastBankCode = null;
    let lastAccountNumber = null;

    async function resolveAccount(bankCodeOverride = null) {
      const accountNumber = accountInput.value.trim();
      const bankCode = bankCodeOverride || bankSelect.value;
      
      // Only resolve if we have valid inputs
      if (accountNumber.length === 10 && bankCode) {
        lastAccountNumber = accountNumber;
        lastBankCode = bankCode;
        
        // Show loading state
        retryBtn.classList.add('hidden');
        spinner.classList.remove('hidden');
        nameDisplay.textContent = '...';
        
        try {
          // Call your backend API to resolve account
          const res = await fetch(`/api/resolve-account?account_number=${accountNumber}&bank_code=${bankCode}`);
          const data = await res.json();
          
          if (data.success && data.data && data.data.account_name) {
            nameDisplay.textContent = data.data.account_name;
            accountNameInput.value = data.data.account_name;
            retryBtn.classList.add('hidden');
          } else {
            nameDisplay.textContent = 'Could not verify account';
            retryBtn.classList.remove('hidden');
            showNotification(data.message || 'Account verification failed', 'error');
          }
        } catch (err) {
          console.error('Account resolution error:', err);
          nameDisplay.textContent = 'Network error';
          retryBtn.classList.remove('hidden');
          showNotification('Network or server error', 'error');
        } finally {
          spinner.classList.add('hidden');
        }
      } else {
        // Clear display if inputs are invalid
        nameDisplay.textContent = accountNumber && bankCode ? 'Enter valid 10-digit account number' : 'Enter bank and account number';
        retryBtn.classList.add('hidden');
      }
    }

    // Retry button click handler
    retryBtn.addEventListener('click', async () => {
      if (lastAccountNumber && lastBankCode) {
        await resolveAccount(lastBankCode);
      }
    });

    // Account number input handler (with debounce)
    let timeout;
    accountInput.addEventListener('input', () => {
      clearTimeout(timeout);
      timeout = setTimeout(() => {
        if (bankSelect.value) {
          resolveAccount();
        }
      }, 500); // 500ms debounce
    });

    // Bank select change handler
    bankSelect.addEventListener('change', () => {
      if (accountInput.value.trim().length === 10) {
        resolveAccount();
      }
    });

    // Initial resolve if modal opens with existing values
    const modalObserver = new MutationObserver(function(mutations) {
      mutations.forEach(function(mutation) {
        if (!mutation.target.classList.contains('hidden')) {
          // Modal is now visible
          if (accountInput.value && bankSelect.value) {
            // Small delay to ensure modal is fully rendered
            setTimeout(() => resolveAccount(), 100);
          }
        }
      });
    });

    modalObserver.observe(editBankModal, { attributes: true, attributeFilter: ['class'] });
  });

  // Simple notification function
  function showNotification(message, type = 'error') {
    // Remove any existing notifications
    const existing = document.querySelector('.notification');
    if (existing) existing.remove();

    const notification = document.createElement('div');
    notification.className = `notification fixed top-4 right-4 ${
      type === 'error' ? 'bg-red-500' : 'bg-green-500'
    } text-white text-sm px-4 py-3 rounded-lg shadow-lg flex items-center gap-2 z-50`;
    
    notification.innerHTML = `
      <i class="fas ${type === 'error' ? 'fa-exclamation-circle' : 'fa-check-circle'}"></i>
      <span>${message}</span>
      <button class="ml-3" onclick="this.parentElement.remove()">
        <i class="fas fa-times"></i>
      </button>
    `;
    
    document.body.appendChild(notification);
    
    // Auto-remove after 5 seconds
    setTimeout(() => {
      if (notification.parentNode) notification.remove();
    }, 5000);
  }
</script>