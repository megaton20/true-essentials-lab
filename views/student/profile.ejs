<!-- Navbar -->
<%- include('./partials/topnav') %>
<!-- Sidebar -->
<%- include('./partials/sidenav') %>

<!-- Main Content -->
<div class="min-h-screen bg-gray-50">
  <div class="container mx-auto px-4 py-6">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Static Sidebar for Desktop -->
      <div class="hidden lg:block lg:w-1/4">
        <%- include('./partials/staticsidebar') %>
      </div>

      <!-- Main Dashboard Section -->
      <div class="lg:w-3/4">
        <%- include('../partials/messages') %>

        <!-- Profile Header Section -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
          <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
            <!-- Avatar -->
            <div class="flex-shrink-0">
              <div class="relative">
                <img src="/images/zap.png" alt="User Avatar" class="w-24 h-24 rounded-full border-4 border-white shadow-lg">
                <div class="absolute -bottom-2 -right-2 w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                  <i class="fas fa-camera text-white text-sm"></i>
                </div>
              </div>
            </div>
            
            <!-- User Info -->
            <div class="flex-grow">
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                  <h1 class="text-2xl font-bold text-gray-900 mb-1"><%= user.full_name %></h1>
                  <div class="flex flex-wrap items-center gap-2 mb-3">
                    <span class="inline-flex items-center gap-1 text-gray-600">
                      <i class="fas fa-envelope text-sm"></i>
                      <span class="text-sm"><%= user.email %></span>
                    </span>
                    <span class="inline-flex items-center gap-1 text-gray-600">
                      <i class="fas fa-phone text-sm"></i>
                      <span class="text-sm"><%= user.phone || 'N/A' %></span>
                    </span>
                    <span class="inline-flex items-center gap-1 text-gray-600">
                      <i class="fas fa-map-marker-alt text-sm"></i>
                      <span class="text-sm"><%= user.location || 'N/A' %></span>
                    </span>
                  </div>
                  <div class="flex items-center gap-3">
                    <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm font-medium rounded-full">
                      <i class="fas fa-user-tag mr-1"></i>
                      <%= user.role || 'Student' %>
                    </span>
                    <span class="text-sm text-gray-500">
                      <i class="far fa-calendar-alt mr-1"></i>
                      Joined <%= new Date(user.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                    </span>
                  </div>
                </div>
                <button onclick="document.getElementById('editUserModal').classList.remove('hidden')"
                        class="inline-flex items-center gap-2 px-4 py-2 bg-white border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors">
                  <i class="fas fa-edit"></i>
                  Edit Profile
                </button>
              </div>
              
              <!-- Bio -->
              <% if (user.bio) { %>
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <p class="text-gray-600"><%= user.bio %></p>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Stats Overview Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
          <!-- Courses Enrolled -->
          <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-xl transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-500 mb-1">Courses Enrolled</p>
                <h3 class="text-2xl font-bold text-blue-600"><%= profileStats.total_courses || 0 %></h3>
              </div>
              <div class="w-12 h-12 rounded-full bg-blue-50 flex items-center justify-center">
                <i class="fas fa-book-open text-xl text-blue-500"></i>
              </div>
            </div>
          </div>
          
          <!-- Sessions Attended -->
          <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-xl transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-500 mb-1">Sessions Attended</p>
                <h3 class="text-2xl font-bold text-green-600">
                  <%= profileStats.attended_sessions || 0 %>/<%= profileStats.total_sessions || 0 %>
                </h3>
                <p class="text-xs text-gray-500 mt-1">
                  <i class="fas fa-chart-line mr-1"></i>
                  <%= profileStats.attendance_rate || 0 %>% Attendance Rate
                </p>
              </div>
              <div class="w-12 h-12 rounded-full bg-green-50 flex items-center justify-center">
                <i class="fas fa-calendar-check text-xl text-green-500"></i>
              </div>
            </div>
          </div>
          
          <!-- Badges Earned -->
          <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-xl transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-500 mb-1">Badges Earned</p>
                <h3 class="text-2xl font-bold text-yellow-600"><%= profileStats.badges_earned || 0 %></h3>
              </div>
              <div class="w-12 h-12 rounded-full bg-yellow-50 flex items-center justify-center">
                <i class="fas fa-trophy text-xl text-yellow-500"></i>
              </div>
            </div>
          </div>
          
          <!-- Completion Rate -->
          <div class="bg-white rounded-xl shadow-lg p-5 hover:shadow-xl transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm text-gray-500 mb-1">Completion Rate</p>
                <h3 class="text-2xl font-bold text-purple-600"><%= profileStats.approval_rate || 0 %>%</h3>
              </div>
              <div class="w-12 h-12 rounded-full bg-purple-50 flex items-center justify-center">
                <i class="fas fa-chart-line text-xl text-purple-500"></i>
              </div>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Left Column - Courses Progress -->
          <div class="lg:col-span-2">
            <!-- Courses Progress Section -->
            <div class="bg-white rounded-xl shadow-lg mb-6">
              <div class="p-6 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                  <i class="fas fa-graduation-cap text-blue-500"></i>
                  My Courses & Progress
                </h3>
              </div>
              
              <div class="p-6">
                <% if (enrolledCourses.length > 0) { %>
                  <div class="space-y-6">
                    <% enrolledCourses.forEach(course => { %>
                      <div class="course-card p-4 border border-gray-200 rounded-xl hover:border-blue-300 transition-colors">
                        <!-- Course Header -->
                        <div class="flex justify-between items-start mb-4">
                          <h4 class="font-semibold text-gray-900 line-clamp-1" title="<%= course.title %>">
                            <%= course.title %>
                          </h4>
                          <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full">
                            <%= course.progress_percentage %>%
                          </span>
                        </div>
                        
                        <!-- Progress Bar -->
                        <div class="mb-4">
                          <div class="flex justify-between text-sm text-gray-500 mb-1">
                            <span>Progress</span>
                            <span><%= course.progress_percentage %>%</span>
                          </div>
                          <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-2 rounded-full transition-all duration-300"
                                 style="width: <%= course.progress_percentage %>%"></div>
                          </div>
                        </div>
                        
                        <!-- Course Stats -->
                        <div class="grid grid-cols-2 gap-4 mb-4">
                          <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                            <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                              <i class="fas fa-video text-blue-500"></i>
                            </div>
                            <div>
                              <p class="text-sm text-gray-500">Videos</p>
                              <p class="font-bold text-gray-900"><%= course.total_videos || 0 %></p>
                            </div>
                          </div>
                          
                          <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                              <i class="fas fa-calendar-check text-green-500"></i>
                            </div>
                            <div>
                              <p class="text-sm text-gray-500">Sessions</p>
                              <p class="font-bold text-gray-900"><%= course.attended_sessions %>/<%= course.total_sessions %></p>
                            </div>
                          </div>
                        </div>
                        
                        <!-- Recent Sessions -->
                        <div class="mt-4 pt-4 border-t border-gray-100">
                          <h5 class="text-sm font-medium text-gray-700 mb-3">Recent Sessions</h5>
                          <% if (course.sessions && course.sessions.length > 0) { %>
                            <div class="space-y-2">
                              <% course.sessions.slice(0, 3).forEach(session => { %>
                                <div class="flex items-center justify-between p-2 hover:bg-gray-50 rounded">
                                  <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-900 truncate" title="<%= session.title %>">
                                      <%= session.title %>
                                    </p>
                                    <p class="text-xs text-gray-500">
                                      <%= new Date(session.scheduled_at).toLocaleDateString() %>
                                    </p>
                                  </div>
                                  <span class="ml-2">
                                    <% if (session.user_attended) { %>
                                      <span class="inline-flex items-center px-2 py-1 bg-green-100 text-green-700 text-xs rounded-full">
                                        <i class="fas fa-check mr-1"></i>
                                        Attended
                                      </span>
                                    <% } else { %>
                                      <span class="inline-flex items-center px-2 py-1 bg-gray-100 text-gray-600 text-xs rounded-full">
                                        <i class="fas fa-times mr-1"></i>
                                        Missed
                                      </span>
                                    <% } %>
                                  </span>
                                </div>
                              <% }); %>
                              
                              <% if (course.sessions.length > 3) { %>
                                <div class="text-center pt-2">
                                  <button class="text-sm text-blue-600 hover:text-blue-700">
                                    +<%= course.sessions.length - 3 %> more sessions
                                  </button>
                                </div>
                              <% } %>
                            </div>
                          <% } else { %>
                            <p class="text-sm text-gray-500 italic">No sessions scheduled yet</p>
                          <% } %>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                <% } else { %>
                  <!-- Empty State -->
                  <div class="text-center py-8">
                    <div class="mb-4">
                      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100">
                        <i class="fas fa-book-open text-2xl text-gray-400"></i>
                      </div>
                    </div>
                    <h4 class="text-lg font-semibold text-gray-900 mb-2">No Courses Enrolled</h4>
                    <p class="text-gray-600 mb-4">Start your learning journey by enrolling in courses.</p>
                    <a href="/courses" 
                       class="inline-flex items-center gap-2 px-6 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                      <i class="fas fa-search"></i>
                      Browse Courses
                    </a>
                  </div>
                <% } %>
              </div>
            </div>
          </div>

          <!-- Right Column - Badges & Info -->
          <div class="space-y-6">
            <!-- Badge Progress -->
            <div class="bg-white rounded-xl shadow-lg">
              <div class="p-6 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                  <i class="fas fa-trophy text-yellow-500"></i>
                  Badge Progress
                </h3>
              </div>
              
              <div class="p-6">
                <div class="space-y-4">
                  <% badgeProgress.forEach(badge => { %>
                    <div class="p-4 border border-gray-200 rounded-xl hover:border-yellow-300 transition-colors">
                      <div class="flex items-start gap-3 mb-3">
                        <div class="flex-shrink-0 text-2xl">
                          <%= badge.icon %>
                        </div>
                        <div class="flex-grow">
                          <h4 class="font-semibold text-gray-900 mb-1"><%= badge.name %></h4>
                          <p class="text-sm text-gray-600"><%= badge.description %></p>
                        </div>
                        <% if (badge.earned) { %>
                          <span class="px-3 py-1 bg-green-100 text-green-700 text-sm font-medium rounded-full">
                            Earned!
                          </span>
                        <% } else { %>
                          <span class="text-sm text-gray-500">
                            <%= badge.progress %>%
                          </span>
                        <% } %>
                      </div>
                      
                      <% if (!badge.earned) { %>
                        <div class="mt-3">
                          <div class="flex justify-between text-sm text-gray-500 mb-1">
                            <span>Progress</span>
                            <span><%= badge.progress %>%</span>
                          </div>
                          <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-gradient-to-r from-yellow-400 to-yellow-500 h-2 rounded-full"
                                 style="width: <%= badge.progress %>%"></div>
                          </div>
                          <div class="flex justify-between mt-2">
                            <span class="text-xs text-gray-500">
                              <%= badge.current %>/<%= badge.target %>
                            </span>
                            <span class="text-xs text-gray-500">
                              <%= badge.target - badge.current %> to go
                            </span>
                          </div>
                        </div>
                      <% } %>
                    </div>
                  <% }); %>
                </div>
              </div>
            </div>

            <!-- Additional Info -->
            <div class="bg-white rounded-xl shadow-lg">
              <div class="p-6 border-b border-gray-100">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                  <i class="fas fa-info-circle text-blue-500"></i>
                  Account Information
                </h3>
              </div>
              
              <div class="p-6">
                <!-- Account Status -->
                <div class="mb-6">
                  <h4 class="font-medium text-gray-900 mb-2">Account Status</h4>
                  <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-700 rounded-full">
                    <i class="fas fa-check-circle mr-2"></i>
                    Active
                  </span>
                </div>
                
                <!-- Bio -->
                <% if (user.bio) { %>
                  <div class="mb-6">
                    <h4 class="font-medium text-gray-900 mb-2">About</h4>
                    <p class="text-gray-600 text-sm"><%= user.bio %></p>
                  </div>
                <% } %>
                
                <!-- Bank Details -->
                <% if (user.is_affiliate && isAffiliate) { %>
                  <div class="pt-6 border-t border-gray-100">
                    <h4 class="font-medium text-gray-900 mb-3">Bank Details</h4>
                    <div class="space-y-3">
                      <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center">
                          <i class="fas fa-university text-blue-500"></i>
                        </div>
                        <div>
                          <p class="text-sm text-gray-500">Bank Name</p>
                          <p class="font-medium text-gray-900"><%= isAffiliate.bank_name || 'Not Set' %></p>
                        </div>
                      </div>
                      
                      <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-green-50 flex items-center justify-center">
                          <i class="fas fa-user text-green-500"></i>
                        </div>
                        <div>
                          <p class="text-sm text-gray-500">Account Name</p>
                          <p class="font-medium text-gray-900"><%= isAffiliate.account_name || 'Not Set' %></p>
                        </div>
                      </div>
                      
                      <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-purple-50 flex items-center justify-center">
                          <i class="fas fa-credit-card text-purple-500"></i>
                        </div>
                        <div>
                          <p class="text-sm text-gray-500">Account Number</p>
                          <p class="font-medium text-gray-900">
                            <%= isAffiliate.account_number ? '****' + isAffiliate.account_number.slice(-4) : 'Not Set' %>
                          </p>
                        </div>
                      </div>
                      
                      <button onclick="document.getElementById('editBankModal').classList.remove('hidden')"
                              class="w-full mt-4 inline-flex items-center justify-center gap-2 px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors">
                        <i class="fas fa-edit"></i>
                        Edit Bank Details
                      </button>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit User Modal -->
<div id="editUserModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50 overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-md w-full">
      <form action="/user/profile/update" method="POST">
        <div class="p-6">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-bold text-gray-900">Edit Profile</h3>
            <button type="button" onclick="closeModal('editUserModal')" 
                    class="text-gray-400 hover:text-gray-500">
              <i class="fas fa-times text-xl"></i>
            </button>
          </div>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
              <input type="text" name="fullName" value="<%= user.full_name %>"
                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
              <input type="text" name="phone" value="<%= user.phone %>"
                     class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
              <textarea name="bio" rows="3" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                        placeholder="Tell us about yourself..."><%= user.bio || '' %></textarea>
            </div>
          </div>
          
          <div class="flex justify-end gap-3 mt-6">
            <button type="button" onclick="closeModal('editUserModal')"
                    class="px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors">
              Cancel
            </button>
            <button type="submit" 
                    class="px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
