<!-- Navbar -->
<%-include('./partials/topnav') %>

<!-- Sidebar -->
<%-include('./partials/sidenav') %>

<!-- Main Content -->
<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Static Sidebar for Desktop -->
      <div class="hidden lg:block lg:w-1/4">
        <%-include('./partials/staticsidebar') %>
      </div>

      <!-- Main Content Area -->
      <div class="lg:w-3/4">
        <!-- Header -->
        <div class="mb-8">
          <a href="/user" 
             class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-900 mb-4">
            <i class="fas fa-arrow-left text-xs"></i>
            Back
          </a>
          
          <%- include('../partials/messages') %>
        </div>

        <!-- Category Header -->
        <div class="mb-6">
          <h1 class="text-xl font-bold text-green-900 mb-2"><%= category.name %></h1>
          <p class="text-sm text-gray-600 mb-4"><%= category.details %></p>
          <div class="text-sm text-gray-500">
            <%= courses.length %> program<%= courses.length !== 1 ? 's' : '' %>
          </div>
          
          <hr>

        </div>


        <!-- Courses -->
        <% if (courses && courses.length > 0) { %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% courses.forEach(function (data) { %>
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-sm transition-shadow">
              <!-- Image -->
              <div class="relative h-40">
                <% if (data.image_url == "default.jpg") { %>
                  <img src="/images/thumbnail.png" 
                       class="w-full h-full object-cover">
                <% } else { %>
                  <img src="<%= data.image_url %>" 
                       class="w-full h-full object-cover">
                <% } %>
                
                <!-- Status Badge -->
                <div class="absolute top-3 left-3">
                  <% if (enrolledCourseIds && enrolledCourseIds.includes(data.id)) { %>
                    <span class="px-2 py-1 bg-green-500 text-white text-xs rounded">
                      Enrolled
                    </span>
                  <% } else if (!data.is_open) { %>
                    <span class="px-2 py-1 bg-gray-500 text-white text-xs rounded">
                      Soon
                    </span>
                  <% } else if (data.price <= 0) { %>
                    <span class="px-2 py-1 bg-blue-500 text-white text-xs rounded">
                      Free
                    </span>
                  <% } %>
                </div>
              </div>

              <!-- Content -->
              <div class="p-4">
                <!-- Title & Description -->
                <h3 class="text-sm font-semibold text-gray-900 mb-2 truncate">
                  <%= data.title %>
                </h3>
                <p class="text-xs text-gray-500 mb-4 line-clamp-2">
                  <%= data.description %>
                </p>

                <!-- Progress or Info -->
                <% if (enrolledCourseIds && enrolledCourseIds.includes(data.id)) { %>
                  <div class="mb-4">
                    <div class="flex justify-between text-xs text-gray-600 mb-1">
                      <span>Progress</span>
                      <span><%= data.progress || 0 %>%</span>
                    </div>
                    <div class="w-full bg-gray-100 rounded-full h-1.5">
                      <div class="bg-blue-500 h-1.5 rounded-full" 
                           style="width: <%= data.progress || 0 %>%"></div>
                    </div>
                  </div>
                <% } else { %>
                  <% if (data.total_sessions > 0) { %>
                    <div class="text-xs text-gray-500 mb-4">
                      <i class="fas fa-video text-xs mr-1"></i>
                      <%= data.total_sessions %> sessions
                    </div>
                  <% } %>
                <% } %>

                <!-- Button -->
                <div>
                  <% if (enrolledCourseIds && enrolledCourseIds.includes(data.id)) { %>
                    <a href="/user/course/<%= data.id %>/details" 
                       class="block w-full text-center text-sm font-medium text-white bg-green-500 hover:bg-green-600 py-2 rounded-lg transition-colors">
                      Continue
                    </a>
                  <% } else if (data.is_open) { %>
                    <form method="POST" 
                          action="/user/course/<%= data.id %>/enroll" 
                          class="enroll-form" 
                          data-course-id="<%= data.id %>" 
                          data-price="<%= data.price %>">
                      <input type="hidden" name="email" class="user-email" value="<%= user.email %>">
                      <input type="hidden" name="user-id" class="user-id" value="<%= user.id %>">
                      <input type="hidden" name="course_id" class="courseId" value="<%= data.id %>">
                      <input type="hidden" name="amount" class="amount" value="<%= data.price %>">

                      <% if (data.price <= 0) { %>
                        <button type="submit" 
                                class="w-full text-sm font-medium text-white bg-blue-500 hover:bg-blue-600 py-2 rounded-lg transition-colors">
                          Enroll Free
                        </button>
                      <% } else { %>
                        <button type="submit" 
                                class="w-full text-sm font-medium text-white bg-green-500 hover:bg-green-600 py-2 rounded-lg transition-colors">
                          Enroll - â‚¦<%= data.price.toLocaleString() %>
                        </button>
                      <% } %>
                    </form>
                  <% } else { %>
                    <button class="w-full text-sm font-medium text-gray-400 bg-gray-100 py-2 rounded-lg cursor-not-allowed" disabled>
                      Coming Soon
                    </button>
                  <% } %>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
          
        <% } else { %>
          <!-- Empty State -->
          <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-book-open text-gray-400"></i>
            </div>
            <h3 class="text-base font-semibold text-gray-900 mb-2">No Programs</h3>
            <p class="text-sm text-gray-500 mb-6">
              No programs available in this category.
            </p>
            <a href="/user" 
               class="text-sm text-gray-600 hover:text-gray-900">
              Back to Dashboard
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>

<script>
  // Enrollment form handling
  document.querySelectorAll('.enroll-form').forEach(form => {
    form.addEventListener('submit', async function(e) {
      const price = parseFloat(form.dataset.price);
      if (price <= 0) return;
      
      e.preventDefault();
      
      const email = form.querySelector('.user-email').value;
      const courseId = form.querySelector('.courseId').value;
      const userId = form.querySelector('.user-id').value;
      const amount = form.querySelector('.amount').value;
      
      const button = form.querySelector('button[type="submit"]');
      const originalText = button.innerHTML;
      button.innerHTML = 'Processing...';
      button.disabled = true;
      
      try {
        const response = await fetch(`/user/course/${courseId}/enroll`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            email, 
            amount, 
            courseId, 
            payFor: 'course', 
            userId 
          })
        });
        
        const data = await response.json();
        
        if (data.status) {
          window.location.href = data.data.authorization_url;
        } else {
          alert(data.message || 'Payment failed.');
        }
      } catch (err) {
        console.error(err);
        alert('Error processing payment.');
      } finally {
        button.innerHTML = originalText;
        button.disabled = false;
      }
    });
  });
</script>