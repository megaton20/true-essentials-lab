<!-- Navbar -->
<%-include('./partials/topnav') %>

<!-- Sidebar -->
<%-include('./partials/sidenav') %>

<!-- Main Content -->
<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Static Sidebar for Desktop -->
      <div class="hidden lg:block lg:w-1/4">
        <%-include('./partials/staticsidebar') %>
      </div>

      <!-- Main Content Area -->
      <div class="lg:w-3/4">
        <!-- Header -->
        <div class="mb-6">
          <a href="/user" 
             class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-900">
            <i class="fas fa-arrow-left text-xs"></i>
            Back to Dashboard
          </a>
          
          <%- include('../partials/messages') %>
        </div>

        <!-- Page Header -->
        <div class="mb-8">
          <h1 class="text-xl font-bold text-gray-900 mb-2">Free Programs</h1>
          <p class="text-gray-600 text-sm">
            <%= freeCourses?.length || 0 %> free programs available
          </p>
        </div>

        <!-- Content -->
        <% if (freeCourses && freeCourses.length > 0) { %>
          <!-- Stats Overview -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
            <div class="bg-white rounded-lg border border-gray-200 p-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-blue-50 rounded-lg flex items-center justify-center">
                  <i class="fas fa-graduation-cap text-blue-500"></i>
                </div>
                <div>
                  <div class="text-lg font-semibold text-gray-900"><%= freeCourses.length %></div>
                  <div class="text-xs text-gray-500">Free Programs</div>
                </div>
              </div>
            </div>
            
            <div class="bg-white rounded-lg border border-gray-200 p-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-green-50 rounded-lg flex items-center justify-center">
                  <i class="fas fa-video text-green-500"></i>
                </div>
                <div>
                  <div class="text-lg font-semibold text-gray-900">
                    <%= freeCourses.reduce((sum, course) => sum + (course.total_sessions || 0), 0) %>
                  </div>
                  <div class="text-xs text-gray-500">Total Classes</div>
                </div>
              </div>
            </div>
            
            <div class="bg-white rounded-lg border border-gray-200 p-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-purple-50 rounded-lg flex items-center justify-center">
                  <i class="fas fa-clock text-purple-500"></i>
                </div>
                <div>
                  <div class="text-lg font-semibold text-gray-900">Lifetime</div>
                  <div class="text-xs text-gray-500">Access</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Courses Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% freeCourses.forEach(function (data) { %>
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-sm transition-shadow">
              <!-- Image -->
              <div class="relative h-40">
                <% if (data.image_url == "default.jpg") { %>
                  <img src="/images/thumbnail.png" 
                       class="w-full h-full object-cover">
                <% } else { %>
                  <img src="<%= data.image_url %>" 
                       class="w-full h-full object-cover">
                <% } %>
                
                <!-- Free Badge -->
                <div class="absolute top-3 left-3">
                  <span class="px-2 py-1 bg-green-500 text-white text-xs font-medium rounded">
                    FREE
                  </span>
                </div>
                
                <!-- Progress Badge -->
                <% if (data.progress && data.progress > 0) { %>
                <div class="absolute top-3 right-3">
                  <span class="px-2 py-1 bg-blue-500 text-white text-xs font-medium rounded">
                    <%= data.progress %>% 
                  </span>
                </div>
                <% } %>
              </div>

              <!-- Content -->
              <div class="p-4">
                <!-- Title & Description -->
                <h3 class="text-sm font-semibold text-gray-900 mb-2 truncate">
                  <%= data.title %>
                </h3>
                <p class="text-xs text-gray-500 mb-4 line-clamp-2">
                  <%= data.description %>
                </p>

                <!-- Stats -->
                <div class="mb-4">
                  <!-- Session Count -->
                  <div class="flex items-center justify-between text-xs text-gray-500 mb-3">
                    <span class="flex items-center gap-1">
                      <i class="fas fa-video text-gray-400"></i>
                      <%= data.total_sessions || 0 %> classes
                    </span>
                    <% if (data.completed_sessions && data.completed_sessions > 0) { %>
                    <span class="flex items-center gap-1">
                      <i class="fas fa-check-circle text-green-500"></i>
                      <%= data.completed_sessions %> done
                    </span>
                    <% } %>
                  </div>

                  <!-- Progress -->
                  <% if (data.progress && data.progress > 0) { %>
                  <div>
                    <div class="flex justify-between text-xs text-gray-600 mb-1">
                      <span>Progress</span>
                      <span><%= data.progress %>%</span>
                    </div>
                    <div class="w-full bg-gray-100 rounded-full h-1.5">
                      <div class="bg-blue-500 h-1.5 rounded-full" 
                           style="width: <%= data.progress %>%"></div>
                    </div>
                  </div>
                  <% } %>
                </div>

                <!-- Button -->
                <a href="/user/course/<%= data.id %>/<%= data.category_id %>" 
                   class="block w-full text-center text-sm font-medium text-white bg-green-500 hover:bg-green-600 py-2 rounded-lg transition-colors">
                  <% if (data.progress && data.progress > 0) { %>
                    Continue
                  <% } else { %>
                    View Program
                  <% } %>
                </a>
              </div>
            </div>
            <% }); %>
          </div>
          
        <% } else { %>
          <!-- Empty State -->
          <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-gift text-gray-400"></i>
            </div>
            <h3 class="text-base font-semibold text-gray-900 mb-2">No Free Programs</h3>
            <p class="text-sm text-gray-500 mb-6 max-w-sm mx-auto">
              Check back later or explore other programs.
            </p>
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <a href="/user" 
                 class="text-sm text-gray-600 hover:text-gray-900">
                Back to Dashboard
              </a>
              <span class="hidden sm:block text-gray-300">â€¢</span>
              <a href="/user/category/all" 
                 class="text-sm text-blue-600 hover:text-blue-700">
                Browse All
              </a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>