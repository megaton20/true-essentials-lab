<!-- Navbar -->
<%-include('./partials/topnav') %>

<!-- Sidebar -->
<%-include('./partials/sidenav') %>

<!-- Main Content -->
<div class="min-h-screen bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Static Sidebar for Desktop -->
      <div class="hidden lg:block lg:w-1/4">
        <%-include('./partials/staticsidebar') %>
      </div>

      <!-- Main Content Area -->
      <div class="lg:w-3/4">
        <!-- Header -->
        <div class="mb-8">
          <a href="/user" 
             class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-gray-900 mb-4">
            <i class="fas fa-arrow-left text-xs"></i>
            Back to Dashboard
          </a>
          
          <div class="flex justify-between items-center mb-2">
            <h1 class="text-xl font-bold text-gray-900">My Courses</h1>
            <span class="text-sm text-gray-500">
              <%= courses.length %> course<%= courses.length !== 1 ? 's' : '' %>
            </span>
          </div>
          
          <%- include('../partials/messages') %>
        </div>

        <% if (courses && courses.length > 0) { %>
          <!-- Stats Overview -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-8">
            <div class="bg-white rounded-lg border border-gray-200 p-4">
              <div class="text-lg font-semibold text-gray-900 mb-1"><%= courses.length %></div>
              <div class="text-xs text-gray-500">Total</div>
            </div>
            
            <div class="bg-white rounded-lg border border-gray-200 p-4">
              <div class="text-lg font-semibold text-gray-900 mb-1">
                <%= Math.round(courses.reduce((sum, course) => sum + (course.progress || 0), 0) / courses.length) || 0 %>%
              </div>
              <div class="text-xs text-gray-500">Progress</div>
            </div>
            
            <div class="bg-white rounded-lg border border-gray-200 p-4">
              <div class="text-lg font-semibold text-gray-900 mb-1">
                <%= courses.reduce((sum, course) => sum + (course.total_sessions || 0), 0) %>
              </div>
              <div class="text-xs text-gray-500">Classes</div>
            </div>
            
            <div class="bg-white rounded-lg border border-gray-200 p-4">
              <div class="text-lg font-semibold text-gray-900 mb-1">
                <%= courses.reduce((sum, course) => sum + (course.completed_sessions || 0), 0) %>
              </div>
              <div class="text-xs text-gray-500">Completed</div>
            </div>
          </div>

          <!-- Courses Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% courses.forEach(function (data) { %>
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-sm transition-shadow">
              <!-- Image -->
              <div class="relative h-40">
                <% if (data.image_url == "default.jpg") { %>
                  <img src="/images/thumbnail.png" 
                       class="w-full h-full object-cover">
                <% } else { %>
                  <img src="<%= data.image_url %>" 
                       class="w-full h-full object-cover">
                <% } %>
                
                <!-- Progress Badge -->
                <% if (data.progress && data.progress > 0) { %>
                <div class="absolute top-3 right-3">
                  <span class="px-2 py-1 bg-blue-500 text-white text-xs font-medium rounded">
                    <%= data.progress %>%
                  </span>
                </div>
                <% } %>
                
                <!-- Category Badge -->
                <div class="absolute bottom-3 left-3">
                  <span class="px-2 py-1 bg-gray-800/70 text-white text-xs rounded">
                    <%= data.category_name?.slice(0, 12) || 'General' %>
                  </span>
                </div>
              </div>

              <!-- Content -->
              <div class="p-4">
                <!-- Title & Description -->
                <h3 class="text-sm font-semibold text-gray-900 mb-2 truncate">
                  <%= data.title %>
                </h3>
                <p class="text-xs text-gray-500 mb-4 line-clamp-2">
                  <%= data.description %>
                </p>

                <!-- Progress -->
                <div class="mb-4">
                  <div class="flex justify-between text-xs text-gray-600 mb-1">
                    <span>
                      <%= data.completed_sessions || 0 %>/<%= data.total_sessions || 0 %> classes
                    </span>
                    <span><%= data.progress || 0 %>%</span>
                  </div>
                  <div class="w-full bg-gray-100 rounded-full h-1.5">
                    <div class="bg-blue-500 h-1.5 rounded-full" 
                         style="width: <%= data.progress || 0 %>%"></div>
                  </div>
                </div>

                <!-- Button -->
                <a href="/user/course/<%= data.id %>/<%= data.category_id %>" 
                   class="block w-full text-center text-sm font-medium text-white bg-blue-500 hover:bg-blue-600 py-2 rounded-lg transition-colors">
                  <% if (data.progress && data.progress > 0) { %>
                    Continue
                  <% } else { %>
                    Start
                  <% } %>
                </a>
              </div>
            </div>
            <% }); %>
          </div>
          
          <!-- Continue Learning -->
          <% 
            const highestProgressCourse = courses.reduce((prev, current) => 
              (prev.progress || 0) > (current.progress || 0) ? prev : current
            );
          %>
          <div class="mt-8 bg-white rounded-lg border border-gray-200 p-4">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
              <div>
                <p class="text-sm text-gray-500 mb-1">Continue learning</p>
                <p class="text-sm font-medium text-gray-900">
                  <%= highestProgressCourse.title %>
                </p>
              </div>
              <a href="/user/course/<%= highestProgressCourse.id %>/<%= highestProgressCourse.category_id %>" 
                 class="text-sm text-blue-600 hover:text-blue-700">
                Continue →
              </a>
            </div>
          </div>
          
        <% } else { %>
          <!-- Empty State -->
          <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-book-open text-gray-400"></i>
            </div>
            <h3 class="text-base font-semibold text-gray-900 mb-2">No Courses</h3>
            <p class="text-sm text-gray-500 mb-6">
              You haven't enrolled in any programs yet.
            </p>
            <div class="flex flex-col sm:flex-row gap-3 justify-center">
              <a href="/user" 
                 class="text-sm text-gray-600 hover:text-gray-900">
                Browse Programs
              </a>
              <span class="hidden sm:block text-gray-300">•</span>
              <a href="/user/course/free" 
                 class="text-sm text-blue-600 hover:text-blue-700">
                Free Programs
              </a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>