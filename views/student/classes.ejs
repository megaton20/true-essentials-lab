
  <!-- Navbar -->
   <%-include('./partials/topnav') %>

  <!-- Sidebar -->
   <!-- Sidebar -->
  <%-include('./partials/sidenav') %>
  

  <!-- Main Content -->
  <div class="container-fluid mt-4">
         

    <div class="row">
      <!-- Static Sidebar for desktop -->
      <div class="col-lg-3 d-none d-lg-block">
          <%-include('./partials/staticsidebar') %>
      </div>

      <!-- Main Dashboard Section -->
      <div class="col-lg-9">
        <main class="p-1">
          
          <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/user/category/<%=categoryId%>" class="btn btn-outline-primary btn-sm">Back</a>
          </div>

          <%- include('../partials/messages') %>
         <div class="bg-grad text-white rounded p-4 mb-4 shadow-sm">
            <div class="text-center">
              <h2 class="mb-1">Schedules for "<%=courses.title%>"</h2>
              <hr>
              <p> <%=courses.description%></p>
              <hr>
            </div>
                   <ul class="list-unstyled ps-1">
                  <% if (courses.takeaways && courses.takeaways.length > 0) { %>
                 
                    <% courses.takeaways.forEach(function(takeaway) { %>
                      <li class="d-flex align-items-center mb-2">
                        <span class="check-circle-icon me-2">
                          <i class="fas fa-check"></i>
                        </span>
                        <span><%= takeaway %></span>
                      </li>
                    <% }); %>
                  <% } else { %>
                    <li class="text-muted">No takeaways provided.</li>
                  <% } %>
                </ul>
          </div>

     
          <!-- Stats -->

      <hr>
         
        <% if (!allSessionsComplete) { %>
              <div class="mb-4">
    
                 <h5> Schedules</h5> <br>
                    <% if (sessions.length === 0) { %>
                      <div class="text-center my-5">
                        <h6 class="text-muted">ðŸ“š No class sessions scheduled for this Program yet.</h6>
                        <p class="text-muted">Please check back later.</p>
                        <a href="/user" class="btn btn-outline-secondary">See Other Programs</a>
                      </div>
                    <% } else { %>
                      <div class="row">                          
                        <% sessions.forEach(function(data, index) {
                          const scheduled = new Date(data.scheduled_at);
                          const now = new Date();
                          const isToday = scheduled.toDateString() === now.toDateString();
                          const isFuture = scheduled > now;
                          const isPast = scheduled < now;

                          let statusText = '';
                          let statusClass = '';
                          let showJoin = false;
                          let showRejoin = false;

                          if (!data.status) {
                            statusText = 'waiting for Tutor';
                            statusClass = 'bg-warning';
                            statusTextColor = 'text-muted';
                            cardType = 'warning';
                          } else if (data.is_joined && isToday) {
                            statusText = 'Attended';
                            statusClass = 'bg-success';
                            statusTextColor = 'text-success';
                            cardType = 'success';
                            showRejoin = true;
                          } else if (!data.is_joined && isToday) {
                            statusText = 'Ongoing';
                            statusClass = 'bg-success';
                            statusTextColor = 'text-success';
                            cardType = 'success';
                            showJoin = true;
                          } else if (!data.is_joined && isFuture) {
                            statusText = 'Upcoming';
                            statusClass = 'bg-info';
                            statusTextColor = 'text-info';
                            cardType = 'info';
                          } else if (isPast  && data.is_joined) {
                            statusText = 'You concluded This Session';
                            statusClass = 'bg-success';
                            statusTextColor = 'text-success';
                            cardType = 'success';
                          
                          } else if (isPast  && !data.is_joined) {
                            statusText = 'You missed this Session';
                            statusClass = 'bg-danger';
                            statusTextColor = 'text-danger';
                            cardType = 'danger';
                          }
                        %>

                        <div class="col-md-3 mb-3" >
                          <div class="p-3 border rounded shadow-sm class-card class card-<%= cardType %> d-flex flex-column justify-content-between" data-aos="fade">
                            <div class="d-flex justify-content-between mb-2">
                              <span class="badge <%= statusClass %> status-badge"><%= statusText %></span>
                            </div>

                            <div class="mb-2">
                              <h6 class="mb-1 text-truncate <%= statusTextColor %>" title="<%= data.title %>">Title: <%= data.title %></h6>
                              <p class="text-muted small text-truncate">Desc: <%= data.description %></p>
                              <p class="text-muted small text-truncate">Host: <%= data.teacher %></p>
                              <p class="text-muted small mb-0" style="font-size: 11px;">
                                <%= scheduled.toLocaleString('en-US', {
                                  year: 'numeric',
                                  month: 'long',
                                  day: 'numeric',
                                  hour: 'numeric',
                                  minute: '2-digit'
                                }) %>
                              </p>
                            </div>

                            <div class="d-flex gap-2">
                             <% if (!showJoin && !showRejoin && !isPast) { %>
                                
                                  <button class="btn btn-sm btn-outline-danger " disabled> <i class="fas fa-lock"></i> Wait For Host!</button>
                              <% } else { %>
                                
                                    <% if (showRejoin) { %>
                                      <a href="/class/<%= data.join_code %>/<%= data.id %>" class="btn btn-sm btn-outline-success">Still Active, Rejoin</a>
                                    <% } else if (showJoin) { %>
                                      <a href="/class/<%= data.join_code %>/<%= data.id %>" class="btn btn-sm btn-outline-success">Join The Class Now</a>
                                    <% } %>

                              

                              <% } %>

                                  <% if (isPast && data.is_joined && !showRejoin && !showRejoin) { %>
                                  <button class=" btn btn-outline-success" disabled>
                                    <i class="fas fa-check"></i>
                                  </button> 
                                  <% } else { %>
                                    
                                    <% } %>
                                    
                                    <% if (isPast) { %> 
                                      <a href="/user/class/<%=data.id%>/course/<%=courseId%>/category/<%=categoryId%>" class="btn btn-outline-success"> <i class="fas fa-video"></i> </a>
                                      <% } else { %>
                                        <button class=" btn btn-outline-success" disabled>
                                          <i class="fas fa-video"></i>  Available After Session
                                        </button> 

                                   <% } %>
                              

                            </div>
                          </div>
                        </div>
                        <% }) %>
                      </div>
                    <% } %>
           
              </div>

                 <% } else { %>
                    
                   <div class="text-center my-5">
                    <img src="/images/checked.png" class="img-fluid" style="height: 100px; width: 100px;" alt="">
                        <h6 class="text-success">Program Completed</h6>
                        <br>
                        <p class="text-muted">Don't miss other programs</p>
                        <a href="/user" class=" mt-3 btn btn-outline-secondary">See Other Programs</a>
                      </div>

                    <% } %>
        
        </main>

      </div>

    </div>
  </div>
