    let tsaCurrentPhrase = 0;
    let tsaCurrentLetter = 0;
    const tsaTypedText = document.getElementById("tsa-typed-text");

    function tsaType() {
      let phrase = tsaPhrases[tsaCurrentPhrase];
      tsaTypedText.textContent = phrase.substring(0, tsaCurrentLetter);
      tsaCurrentLetter++;

      if (tsaCurrentLetter > phrase.length) {
        setTimeout(tsaErase, 500);
      } else {
        setTimeout(tsaType, 50);
      }
    }

    function tsaErase() {
      let phrase = tsaPhrases[tsaCurrentPhrase];
      tsaTypedText.textContent = phrase.substring(0, tsaCurrentLetter);
      tsaCurrentLetter--;

      if (tsaCurrentLetter < 0) {
        tsaCurrentPhrase = (tsaCurrentPhrase + 1) % tsaPhrases.length;
        setTimeout(tsaType, 500);
      } else {
        setTimeout(tsaErase, 50);
      }
    }

    // Start TSA typing effect
    tsaType();

    // Counter animation for stats
    function animateCounters() {
      const counters = document.querySelectorAll('.stat-number');
      const speed = 200;

      counters.forEach(counter => {
        const target = +counter.getAttribute('data-count');
        const count = +counter.innerText;
        const increment = target / speed;

        if (count < target) {
          counter.innerText = Math.ceil(count + increment);
          setTimeout(() => animateCounters(), 1);
        } else {
          counter.innerText = target;
        }
      });
    }

    // Initialize counters when page loads
    window.addEventListener('load', animateCounters);
  </script>

