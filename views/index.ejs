             <script>
    const phrases = [
      "Welcome To True Series",
      "Empower Your Future",
      "Learn, Refer & Earn",
      "6 Weeks to Success"
    ];

    let currentPhrase = 0;
    let currentLetter = 0;
    const typedText = document.getElementById("typed-text");

    function type() {
      let phrase = phrases[currentPhrase];
      typedText.textContent = phrase.substring(0, currentLetter);
      currentLetter++;

      if (currentLetter > phrase.length) {
        setTimeout(erase, 2500); // Pause before erasing
      } else {
        setTimeout(type, 100);
      }
    }

    function erase() {
      let phrase = phrases[currentPhrase];
      typedText.textContent = phrase.substring(0, currentLetter);
      currentLetter--;

      if (currentLetter < 0) {
        currentPhrase = (currentPhrase + 1) % phrases.length;
        setTimeout(type, 500); // Pause before typing next
      } else {
        setTimeout(erase, 50);
      }
    }

    // Start typing effect
    type();
  </script>